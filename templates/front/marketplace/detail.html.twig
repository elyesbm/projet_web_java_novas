{% extends 'front/base_home.html.twig' %}

{% block title %}{{ article.titre }} - EduVie Marketplace{% endblock %}

{% block body %}
<div class="min-h-screen bg-background">
    {% include 'front/partials/_auth_nav.html.twig' %}

    <!-- Content -->
    <div class="pt-32 pb-24 px-6">
        <div class="max-w-7xl mx-auto">
            <div class="mb-6">
                <a href="{{ path('app_marketplace_index') }}" class="inline-flex items-center gap-2 text-muted-foreground hover:text-foreground transition-colors">
                    <i data-lucide="arrow-left" class="w-5 h-5"></i>
                    <span class="text-sm">Retour au catalogue</span>
                </a>
            </div>

            {% for flash in app.flashes('success') %}
                <div class="mb-4 p-4 rounded-xl bg-green-500/20 text-green-400 text-sm">{{ flash }}</div>
            {% endfor %}
            {% for flash in app.flashes('error') %}
                <div class="mb-4 p-4 rounded-xl bg-red-500/20 text-red-400 text-sm">{{ flash }}</div>
            {% endfor %}

            <div class="grid lg:grid-cols-2 gap-12">
                <!-- Left - Images -->
                <div class="space-y-4">
                    <div class="glass-card rounded-3xl p-4">
                        <div class="aspect-square rounded-2xl overflow-hidden">
                            <img id="mainImage" src="{{ asset('images/' ~ article.image) }}" onerror="this.onerror=null;this.src='{{ asset('images/skills-learning.jpg') }}';" alt="{{ article.titre }}" class="w-full h-full object-cover">
                        </div>
                    </div>
                </div>

                <!-- Right - Details & Purchase -->
                <div class="space-y-6">
                    <!-- Header -->
                    <div>
                        <div class="flex items-center gap-2 mb-3">
                            <span class="px-3 py-1 rounded-full text-xs font-medium {{ article.type == 'academic' ? 'bg-academic/20 text-academic' : 'bg-personal/20 text-personal' }}">
                                {{ article.type == 'academic' ? 'Academic' : 'Personal' }}
                            </span>
                            <span class="px-3 py-1 rounded-full text-xs font-medium bg-secondary text-muted-foreground">
                                {{ article.categorie.nom }}
                            </span>
                            <span class="px-3 py-1 rounded-full text-xs font-medium bg-green-500/20 text-green-400 flex items-center gap-1">
                                <span class="w-1.5 h-1.5 rounded-full bg-green-400"></span>
                                {{ article.statut }}
                            </span>
                        </div>
                        
                        <h1 class="font-serif text-3xl md:text-4xl font-medium mb-4">{{ article.titre }}</h1>
                        
                        <div class="flex items-center gap-4 mb-6">
                            <div class="flex items-center gap-2">
                                <img src="{{ asset('images/' ~ article.vendeur.avatar) }}" class="w-10 h-10 rounded-full object-cover ring-2 ring-primary/30">
                                <div>
                                    <p class="font-medium">{{ article.vendeur.nom }}</p>
                                    <p class="text-xs text-muted-foreground">{{ article.vendeur.niveau }}</p>
                                </div>
                            </div>
                            <div class="h-8 w-px bg-white/10"></div>
                            <div class="flex items-center gap-1 text-sm text-muted-foreground">
                                <i data-lucide="star" class="w-4 h-4 text-yellow-500 fill-yellow-500"></i>
                                <span class="font-medium text-foreground">{{ article.vendeur.note }}</span>
                                <span>({{ article.vendeur.annonces }} annonces)</span>
                            </div>
                        </div>
                        
                        <p class="font-serif text-4xl font-bold text-primary mb-2">{{ article.prix }} DT</p>
                        <p class="text-sm text-muted-foreground">Prix negociable</p>
                    </div>

                    <!-- Description -->
                    <div class="glass-card rounded-2xl p-6">
                        <h3 class="font-medium mb-3">Description</h3>
                        <p class="text-muted-foreground leading-relaxed whitespace-pre-line">{{ article.contenu }}</p>
                    </div>

                    <!-- Urgence / Activite -->
                    <div id="live-urgency-widget" data-article-id="{{ article.id }}" class="glass-card rounded-2xl p-6 border border-primary/20">
                        <p class="text-center font-serif text-2xl font-semibold mb-3 text-foreground">
                            Attention: plus que <span id="live-stock-count" class="text-primary">7</span> en stock
                        </p>
                        <p class="text-center text-lg mb-5">
                            <span class="text-muted-foreground">En ce moment</span>
                            <span id="live-viewers-count" class="inline-flex items-center justify-center min-w-10 h-10 px-3 rounded-lg bg-primary/90 text-white font-bold mx-2">6</span>
                            <span class="text-muted-foreground">personnes consultent ce produit.</span>
                        </p>

                        <div class="w-full h-4 rounded-full bg-white/10 overflow-hidden mb-6">
                            <div id="live-stock-bar" class="h-full rounded-full" style="width: 62%; background: repeating-linear-gradient(135deg, rgba(225, 29, 72, 0.95) 0 9px, rgba(255,255,255,0.22) 9px 16px);"></div>
                        </div>

                        <div class="flex items-start justify-between text-center border-t border-white/10 pt-5">
                            <div class="w-16">
                                <div id="countdown-days" class="font-serif text-4xl font-bold leading-none">00</div>
                                <div class="text-xs text-muted-foreground mt-1">jours</div>
                            </div>
                            <div class="font-serif text-4xl font-bold leading-none pt-0.5 text-muted-foreground">:</div>
                            <div class="w-16">
                                <div id="countdown-hours" class="font-serif text-4xl font-bold leading-none">00</div>
                                <div class="text-xs text-muted-foreground mt-1">heures</div>
                            </div>
                            <div class="font-serif text-4xl font-bold leading-none pt-0.5 text-muted-foreground">:</div>
                            <div class="w-16">
                                <div id="countdown-minutes" class="font-serif text-4xl font-bold leading-none">00</div>
                                <div class="text-xs text-muted-foreground mt-1">minutes</div>
                            </div>
                            <div class="font-serif text-4xl font-bold leading-none pt-0.5 text-muted-foreground">:</div>
                            <div class="w-16">
                                <div id="countdown-seconds" class="font-serif text-4xl font-bold leading-none">00</div>
                                <div class="text-xs text-muted-foreground mt-1">secondes</div>
                            </div>
                        </div>
                    </div>

                    <!-- Add To Cart -->
                    <div class="glass-card rounded-3xl p-6 border border-primary/30">
                        <h3 class="font-serif text-xl font-medium mb-4 flex items-center gap-2">
                            <i data-lucide="shopping-cart" class="w-5 h-5 text-primary"></i>
                            Panier
                        </h3>
                        <form method="post" action="{{ path('app_marketplace_panier_ajouter', {id: article.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('panier_ajouter_' ~ article.id) }}">
                            <button type="submit" class="w-full h-14 {{ in_cart ? 'bg-secondary border border-white/10 text-muted-foreground cursor-not-allowed' : 'bg-primary text-white hover:bg-primary/90 shadow-lg shadow-primary/25' }} rounded-xl font-medium transition-all flex items-center justify-center gap-2" {{ in_cart ? 'disabled' : '' }}>
                                <i data-lucide="shopping-cart" class="w-5 h-5"></i>
                                {{ in_cart ? 'Déjà dans le panier' : 'Ajouter au panier' }}
                            </button>
                        </form>
                    </div>

                    <!-- Stats -->
                    <div class="flex items-center justify-between text-sm text-muted-foreground">
                        <span class="flex items-center gap-2">
                            <i data-lucide="eye" class="w-4 h-4"></i>
                            {{ article.vues }} vues
                        </span>
                        <span class="flex items-center gap-2">
                            <i data-lucide="clock" class="w-4 h-4"></i>
                            Publie le {{ article.date|date('d M Y') }}
                        </span>
                        <button class="flex items-center gap-2 hover:text-primary transition-colors">
                            <i data-lucide="flag" class="w-4 h-4"></i>
                            Signaler
                        </button>
                    </div>
                </div>
            </div>

            <!-- Similar Articles -->
            <section class="mt-16">
                <h2 class="font-serif text-2xl font-medium mb-6">Articles similaires</h2>
                <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for sim in articles_similaires %}
                    <a href="{{ path('app_marketplace_detail', {id: sim.id}) }}" class="glass-card rounded-2xl overflow-hidden hover:border-primary/30 transition-all group">
                        <div class="h-40 overflow-hidden">
                            <img src="{{ asset('images/' ~ sim.image) }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform">
                        </div>
                        <div class="p-4">
                            <h3 class="font-medium mb-2 group-hover:text-primary transition-colors">{{ sim.titre }}</h3>
                            <p class="font-serif text-xl font-bold text-primary">{{ sim.prix }} DT</p>
                        </div>
                    </a>
                    {% endfor %}
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        (function () {
            const widget = document.getElementById('live-urgency-widget');
            if (!widget) return;

            const articleId = parseInt(widget.dataset.articleId || '0', 10) || 0;
            const stockEl = document.getElementById('live-stock-count');
            const viewersEl = document.getElementById('live-viewers-count');
            const stockBarEl = document.getElementById('live-stock-bar');

            const daysEl = document.getElementById('countdown-days');
            const hoursEl = document.getElementById('countdown-hours');
            const minutesEl = document.getElementById('countdown-minutes');
            const secondsEl = document.getElementById('countdown-seconds');

            const baseStock = Math.max(3, 11 - (articleId % 7));
            let currentStock = baseStock;
            let viewers = 4 + (articleId % 8);

            const now = Date.now();
            const extraHours = 8 + (articleId % 10);
            const endAt = now + (2 * 24 * 60 * 60 * 1000) + (extraHours * 60 * 60 * 1000);

            function pad(n) {
                return String(Math.max(0, n)).padStart(2, '0');
            }

            function renderStock() {
                stockEl.textContent = String(currentStock);
                viewersEl.textContent = String(viewers);
                const pct = Math.max(8, Math.min(100, Math.round((currentStock / Math.max(baseStock, 1)) * 100)));
                stockBarEl.style.width = pct + '%';
            }

            function tickCountdown() {
                const diff = Math.max(0, endAt - Date.now());
                const totalSeconds = Math.floor(diff / 1000);
                const days = Math.floor(totalSeconds / 86400);
                const hours = Math.floor((totalSeconds % 86400) / 3600);
                const minutes = Math.floor((totalSeconds % 3600) / 60);
                const seconds = totalSeconds % 60;

                daysEl.textContent = pad(days);
                hoursEl.textContent = pad(hours);
                minutesEl.textContent = pad(minutes);
                secondsEl.textContent = pad(seconds);
            }

            renderStock();
            tickCountdown();

            setInterval(tickCountdown, 1000);

            setInterval(function () {
                viewers = Math.max(2, viewers + (Math.random() > 0.5 ? 1 : -1));
                if (Math.random() > 0.72 && currentStock > 1) {
                    currentStock -= 1;
                }
                renderStock();
            }, 7000);
        })();
    </script>
{% endblock %}

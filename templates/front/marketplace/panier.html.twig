{% extends 'front/base_home.html.twig' %}

{% block title %}Panier - Marketplace{% endblock %}

{% block body %}
<div class="min-h-screen bg-background">
    {% include 'front/partials/_auth_nav.html.twig' %}

    <section class="pt-32 pb-8 px-6">
        <div class="max-w-7xl mx-auto">
            <h1 class="font-serif text-3xl md:text-4xl font-medium mb-2">Mon panier</h1>
            <p class="text-muted-foreground">Articles ajoutés depuis le marketplace.</p>
        </div>
    </section>

    <section class="px-6 pb-24">
        <div class="max-w-7xl mx-auto">
            {% for flash in app.flashes('success') %}
                <div class="mb-4 p-4 rounded-xl bg-green-500/20 text-green-400 text-sm">{{ flash }}</div>
            {% endfor %}
            {% for flash in app.flashes('error') %}
                <div class="mb-4 p-4 rounded-xl bg-red-500/20 text-red-400 text-sm">{{ flash }}</div>
            {% endfor %}

            {% if articles is empty %}
                <div class="glass-card rounded-2xl p-12 text-center">
                    <i data-lucide="shopping-cart" class="w-14 h-14 text-muted-foreground mx-auto mb-4"></i>
                    <p class="text-muted-foreground mb-4">Votre panier est vide.</p>
                    <a href="{{ path('app_marketplace_index') }}" class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-white rounded-xl font-medium hover:bg-primary/90 transition-all">
                        <i data-lucide="shopping-bag" class="w-5 h-5"></i>
                        Voir les produits
                    </a>
                </div>
            {% else %}
                <div class="glass-card rounded-2xl p-4 mb-6 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                    <div class="text-sm text-muted-foreground">
                        Paiement sécurisé via Stripe Checkout (mode test).
                    </div>
                    <form method="post" action="{{ path('app_marketplace_checkout') }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('marketplace_checkout') }}">
                        <button type="submit" class="h-12 px-6 bg-primary text-white rounded-xl font-medium hover:bg-primary/90 transition-all shadow-lg shadow-primary/25">
                            Passer au paiement
                        </button>
                    </form>
                </div>

                <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for article in articles %}
                        <div class="glass-card rounded-2xl overflow-hidden">
                            <div class="h-48 overflow-hidden">
                                <img src="{{ asset('images/' ~ article.image) }}" alt="{{ article.titre }}" class="w-full h-full object-cover">
                            </div>
                            <div class="p-4">
                                <h2 class="font-medium mb-2 line-clamp-2">{{ article.titre }}</h2>
                                <p class="font-serif text-2xl font-bold text-primary mb-2">{{ article.prix }} DT</p>
                                <div class="flex items-center gap-2 mb-4">
                                    <form method="post" action="{{ path('app_marketplace_panier_diminuer', {id: article.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('panier_diminuer_' ~ article.id) }}">
                                        <button type="submit" class="w-9 h-9 rounded-lg bg-secondary border border-white/10 text-lg hover:bg-white/5 transition-colors">-</button>
                                    </form>
                                    <span class="min-w-10 text-center text-sm font-semibold">{{ article.quantite }}</span>
                                    <form method="post" action="{{ path('app_marketplace_panier_ajouter', {id: article.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('panier_ajouter_' ~ article.id) }}">
                                        <input type="hidden" name="redirect_to" value="panier">
                                        <button type="submit" class="w-9 h-9 rounded-lg bg-secondary border border-white/10 text-lg hover:bg-white/5 transition-colors">+</button>
                                    </form>
                                    <span class="ml-auto text-xs text-muted-foreground">Sous-total: {{ (article.prix * article.quantite) }} DT</span>
                                </div>
                                <div class="flex gap-2">
                                    <a href="{{ path('app_marketplace_detail', {id: article.id}) }}" class="flex-1 h-11 rounded-xl bg-secondary border border-white/10 flex items-center justify-center text-sm hover:bg-white/5 transition-colors">
                                        Voir
                                    </a>
                                    <form method="post" action="{{ path('app_marketplace_panier_supprimer', {id: article.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('panier_supprimer_' ~ article.id) }}">
                                        <button type="submit" class="h-11 px-4 rounded-xl bg-red-500/20 text-red-400 hover:bg-red-500/30 transition-colors text-sm">
                                            Retirer
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </section>
</div>
{% endblock %}

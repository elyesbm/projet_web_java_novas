{% extends 'front/base_home.html.twig' %}

{% block title %}Modifier catégorie - Marketplace{% endblock %}

{% block body %}
<div class="min-h-screen bg-background">
    <section class="pt-32 pb-8 px-6">
        <div class="max-w-7xl mx-auto">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h1 class="font-serif text-3xl md:text-4xl font-medium">Modifier la catégorie</h1>
                    <p class="text-muted-foreground">Mettez à jour les informations de la catégorie.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="px-6 pb-24">
        <div class="max-w-2xl mx-auto">
            <div class="glass-card rounded-2xl p-6">
                <form id="categorie-form-edit" method="post" action="{{ path('app_marketplace_categorie_modifier', {'id': categorie.getId()}) }}" class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium mb-1">Nom</label>
                        <input id="nom-edit" name="nom" type="text" value="{{ categorie.getNomCategorie() }}" class="h-12 w-full bg-secondary border border-white/10 rounded-xl px-3" required>
                        <p id="nom-error-edit" class="text-sm text-red-500 mt-1 hidden">Le nom est obligatoire (2 caractères minimum).</p>
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1">Description</label>
                        <textarea id="description-edit" name="description" class="w-full bg-secondary border border-white/10 rounded-xl px-3 py-2" rows="4">{{ categorie.getDescriptionCategorie() }}</textarea>
                    </div>

                    <div class="flex items-center gap-3">
                        <button id="submit-btn-edit" type="submit" class="px-4 py-2 bg-primary text-white rounded-xl">Enregistrer</button>
                        <a href="{{ path('app_marketplace_categories') }}" class="text-sm">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </section>

    {% block javascripts %}
        <script>
            (function(){
                const form = document.getElementById('categorie-form-edit');
                const nom = document.getElementById('nom-edit');
                const nomError = document.getElementById('nom-error-edit');
                form.addEventListener('submit', function(e){
                    let ok = true;
                    const v = nom.value.trim();
                    if (v.length < 2) { ok = false; nomError.classList.remove('hidden'); }
                    else { nomError.classList.add('hidden'); }
                    if (!ok) { e.preventDefault(); nom.focus(); }
                });
            })();
        </script>
    {% endblock %}
</div>
{% endblock %}

{% extends 'front/base_home.html.twig' %}

{% block title %}Ajouter categorie - Marketplace{% endblock %}

{% block body %}
<div class="min-h-screen bg-background">
    <section class="pt-32 pb-8 px-6">
        <div class="max-w-7xl mx-auto">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h1 class="font-serif text-3xl md:text-4xl font-medium">Ajouter une categorie</h1>
                    <p class="text-muted-foreground">Creez une nouvelle categorie visible sur la marketplace.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="px-6 pb-24">
        <div class="max-w-2xl mx-auto">
            <div class="glass-card rounded-2xl p-6">
                {% set front_category_errors = app.flashes('error') %}
                {% if front_category_errors is not empty %}
                    <div class="mb-4 p-4 rounded-xl border border-red-500/30 bg-red-500/15 text-red-300">
                        <p class="font-semibold mb-2">Veuillez corriger les erreurs suivantes :</p>
                        <ul class="list-disc pl-5 text-sm space-y-1">
                            {% for message in front_category_errors %}
                                <li>{{ message }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                {% for flash in app.flashes('success') %}
                    <div class="mb-4 p-3 rounded bg-green-500/20 text-green-400">{{ flash }}</div>
                {% endfor %}

                <form id="categorie-form" method="post" action="{{ path('app_marketplace_categorie_ajouter') }}" class="space-y-4" novalidate>
                    <div>
                        <label class="block text-sm font-medium mb-1">Nom <span class="text-rose-500">*</span></label>
                        <input
                            id="nom"
                            name="nom"
                            type="text"
                            value="{{ data.nom|default('') }}"
                            class="h-12 w-full bg-secondary border border-white/10 rounded-xl px-3"
                            minlength="2"
                            maxlength="255"
                        >
                        <p id="nom-error" class="text-sm text-red-400 mt-1 hidden">Le nom est obligatoire (2 caracteres minimum).</p>
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1">Description</label>
                        <textarea
                            id="description"
                            name="description"
                            class="w-full bg-secondary border border-white/10 rounded-xl px-3 py-2"
                            rows="4"
                            maxlength="255"
                        >{{ data.description|default('') }}</textarea>
                        <p id="description-error" class="text-sm text-red-400 mt-1 hidden">La description ne doit pas depasser 255 caracteres.</p>
                    </div>

                    <div class="flex items-center gap-3">
                        <button id="submit-btn" type="submit" class="px-4 py-2 bg-primary text-white rounded-xl">Creer</button>
                        <a href="{{ path('app_marketplace_categories') }}" class="text-sm">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        (function () {
            const form = document.getElementById('categorie-form');
            if (!form) return;

            const nom = document.getElementById('nom');
            const description = document.getElementById('description');
            const nomError = document.getElementById('nom-error');
            const descriptionError = document.getElementById('description-error');

            form.addEventListener('submit', function (e) {
                let ok = true;

                const nomValue = (nom?.value || '').trim();
                const descriptionValue = (description?.value || '').trim();

                if (nomValue.length < 2) {
                    ok = false;
                    if (nomError) nomError.classList.remove('hidden');
                } else {
                    if (nomError) nomError.classList.add('hidden');
                }

                if (descriptionValue.length > 255) {
                    ok = false;
                    if (descriptionError) descriptionError.classList.remove('hidden');
                } else {
                    if (descriptionError) descriptionError.classList.add('hidden');
                }

                if (!ok) {
                    e.preventDefault();
                    if (typeof showToast === 'function') {
                        if (nomValue.length < 2) {
                            showToast('Le nom est obligatoire (2 caracteres minimum).', 'error');
                        }
                        if (descriptionValue.length > 255) {
                            showToast('La description ne doit pas depasser 255 caracteres.', 'error');
                        }
                    }
                    if (nom && nomValue.length < 2) nom.focus();
                }
            });
        })();
    </script>
{% endblock %}
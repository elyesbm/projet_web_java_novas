{% extends 'front/base_home.html.twig' %}

{% block title %}Ajouter catégorie - Marketplace{% endblock %}

{% block body %}
<div class="min-h-screen bg-background">
    <section class="pt-32 pb-8 px-6">
        <div class="max-w-7xl mx-auto">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h1 class="font-serif text-3xl md:text-4xl font-medium">Ajouter une catégorie</h1>
                    <p class="text-muted-foreground">Créez une nouvelle catégorie visible sur la marketplace.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="px-6 pb-24">
        <div class="max-w-2xl mx-auto">
            <div class="glass-card rounded-2xl p-6">
                {% for flash in app.flashes('success') %}
                    <div class="mb-4 p-3 rounded bg-green-500/20 text-green-400">{{ flash }}</div>
                {% endfor %}
                {% for flash in app.flashes('error') %}
                    <div class="mb-4 p-3 rounded bg-red-500/20 text-red-400">{{ flash }}</div>
                {% endfor %}

                <form id="categorie-form" method="post" action="{{ path('app_marketplace_categorie_ajouter') }}" class="space-y-4" novalidate>
                    <div>
                        <label class="block text-sm font-medium mb-1">Nom</label>
                        <input id="nom" name="nom" type="text" value="{{ data.nom|default('') }}" class="h-12 w-full bg-secondary border border-white/10 rounded-xl px-3">
                        <p id="nom-error" class="text-sm text-red-500 mt-1 hidden">Le nom est obligatoire (2 caractères minimum).</p>
                    </div>

                    <div>
                        <label class="block text-sm font-medium mb-1">Description</label>
                        <textarea id="description" name="description" class="w-full bg-secondary border border-white/10 rounded-xl px-3 py-2" rows="4">{{ data.description|default('') }}</textarea>
                    </div>

                    <div class="flex items-center gap-3">
                        <button id="submit-btn" type="submit" class="px-4 py-2 bg-primary text-white rounded-xl">Créer</button>
                        <a href="{{ path('app_marketplace_categories') }}" class="text-sm">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        (function () {
            const form = document.getElementById('categorie-form');
            const nom = document.getElementById('nom');
            const nomError = document.getElementById('nom-error');

            if (!form || !nom || !nomError) return;

            function setNomError(message) {
                nomError.textContent = message;
                nomError.classList.remove('hidden');
                nom.classList.add('border-red-500');
            }

            function clearNomError() {
                nomError.classList.add('hidden');
                nom.classList.remove('border-red-500');
            }

            nom.addEventListener('input', () => {
                if (nom.value.trim().length >= 2) {
                    clearNomError();
                }
            });

            form.addEventListener('submit', function (e) {
                const nomValue = nom.value.trim();

                if (!nomValue) {
                    e.preventDefault();
                    setNomError('Le nom de la catégorie est obligatoire.');
                    nom.focus();
                    return;
                }

                if (nomValue.length < 2) {
                    e.preventDefault();
                    setNomError('Le nom doit contenir au moins 2 caractères.');
                    nom.focus();
                    return;
                }

                clearNomError();
            });
        })();
    </script>
{% endblock %}

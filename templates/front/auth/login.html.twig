{% extends 'front/base_home.html.twig' %}

{% block title %}Connexion - NoVas{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center relative overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 gradient-orb"></div>
    <div class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[800px] h-[800px] bg-primary/20 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-0 right-1/4 w-[600px] h-[600px] bg-accent/10 rounded-full blur-[100px]"></div>
    
    <!-- Back to Home -->
    <a href="{{ path('app_home') }}" class="absolute top-6 left-6 flex items-center gap-2 text-muted-foreground hover:text-foreground transition-colors">
        <i data-lucide="arrow-left" class="w-5 h-5"></i>
        <span class="text-sm">Retour</span>
    </a>
    
    <!-- Login Card -->
    <div class="relative w-full max-w-md mx-4">
        <div class="glass-card rounded-3xl p-8 md:p-10 shadow-2xl">
            <!-- Logo -->
            <div class="text-center mb-8">
                <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-primary glow-primary mb-4">
                    <i data-lucide="graduation-cap" class="w-8 h-8 text-white"></i>
                </div>
                <h1 class="font-serif text-2xl font-semibold mb-2">Connexion</h1>
                <p class="text-muted-foreground text-sm">Heureux de vous revoir sur NoVas</p>
            </div>
            
            {# Erreur d'authentification (credentials invalides) #}
            {% if error %}
                <div class="mb-5 p-4 rounded-xl bg-rose-500/10 border border-rose-500/30 text-rose-400 text-sm">
                    {{ error.message ?? (error.messageKey|trans(error.messageData, 'security')) }}
                </div>
            {% endif %}

            {# Formulaire avec novalidate pour forcer la validation serveur #}
            <form action="{{ path('app_login') }}" method="post" class="space-y-5" novalidate>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                
                {# Champ Email #}
                <div>
                    <label for="inputEmail" class="block text-sm font-medium mb-2">Email universitaire</label>
                    <div class="relative">
                        <i data-lucide="mail" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-muted-foreground"></i>
                        <input 
                            type="email" 
                            id="inputEmail"
                            name="_username" 
                            value="{{ last_username|default('') }}"
                            autocomplete="email"
                            class="w-full h-14 bg-secondary border border-white/10 rounded-xl pl-12 pr-4 text-sm focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all placeholder:text-muted-foreground/50"
                            placeholder="prenom.nom@univ.fr"
                        >
                    </div>
                </div>
                
                {# Champ Mot de passe #}
                <div>
                    <label for="inputPassword" class="block text-sm font-medium mb-2">Mot de passe</label>
                    <div class="relative">
                        <i data-lucide="lock" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-muted-foreground"></i>
                        <input 
                            type="password" 
                            id="inputPassword"
                            name="_password" 
                            autocomplete="current-password"
                            class="w-full h-14 bg-secondary border border-white/10 rounded-xl pl-12 pr-12 text-sm focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all placeholder:text-muted-foreground/50"
                            placeholder="••••••••"
                        >
                        <button type="button" onclick="togglePassword(this)" class="absolute right-4 top-1/2 -translate-y-1/2 text-muted-foreground hover:text-foreground transition-colors">
                            <i data-lucide="eye" class="w-5 h-5"></i>
                        </button>
                    </div>
                </div>
                
                <div class="flex items-center justify-between text-sm">
                    <label class="flex items-center gap-2 cursor-pointer">
                        <input type="checkbox" name="remember" class="w-4 h-4 rounded border-white/10 bg-secondary text-primary focus:ring-primary focus:ring-offset-0">
                        <span class="text-muted-foreground">Se souvenir de moi</span>
                    </label>
                    <a href="#" class="text-primary hover:underline">Mot de passe oublié ?</a>
                </div>
                
                <button type="submit" class="w-full h-14 bg-primary text-white rounded-xl font-medium hover:bg-primary/90 transition-all shadow-lg shadow-primary/25 flex items-center justify-center gap-2 group">
                    Se connecter
                    <i data-lucide="arrow-right" class="w-5 h-5 group-hover:translate-x-1 transition-transform"></i>
                </button>
            </form>
            </div>

            {# Connexion par reconnaissance faciale #}
            <div id="form-face" class="hidden space-y-5">
                <p class="text-muted-foreground text-sm">Positionnez votre visage face à la caméra puis cliquez sur « Se connecter », ou utilisez la même photo qu’à l’inscription.</p>
                <div class="relative w-full aspect-video max-w-sm mx-auto rounded-xl bg-secondary border border-white/10 overflow-hidden">
                    <video id="face-video" autoplay playsinline muted class="w-full h-full object-cover"></video>
                    <img id="face-photo-preview" src="" alt="" class="hidden absolute inset-0 w-full h-full object-cover">
                    <canvas id="face-canvas" class="absolute inset-0 w-full h-full pointer-events-none"></canvas>
                </div>
                <div class="flex flex-col sm:flex-row gap-2 justify-center items-center">
                    <button type="button" id="btn-login-face" class="w-full sm:w-auto h-12 px-6 bg-primary text-white rounded-xl font-medium hover:bg-primary/90 transition-all shadow-lg shadow-primary/25 flex items-center justify-center gap-2">
                        <i data-lucide="scan-face" class="w-5 h-5"></i>
                        Caméra
                    </button>
                    <label class="w-full sm:w-auto h-12 px-6 bg-secondary border border-white/10 rounded-xl font-medium hover:bg-white/5 transition-all flex items-center justify-center gap-2 cursor-pointer">
                        <i data-lucide="upload" class="w-5 h-5"></i>
                        Utiliser une photo
                        <input type="file" id="face-photo-input" accept="image/*" class="hidden">
                    </label>
                </div>
                <p id="face-login-status" class="text-sm text-center min-h-[1.5rem]"></p>
            </div>
            
            <!-- Divider -->
            <div class="relative my-8">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-white/10"></div>
                </div>
                <div class="relative flex justify-center text-sm">
                    <span class="px-4 bg-[#1a1917] text-muted-foreground">Ou continuer avec</span>
                </div>
            </div>
            
            <!-- Social Login -->
            <div class="grid grid-cols-2 gap-4">
                <button class="flex items-center justify-center gap-2 h-12 bg-secondary border border-white/10 rounded-xl hover:bg-white/5 transition-colors">
                    <svg class="w-5 h-5" viewBox="0 0 24 24"><path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
                    <span class="text-sm">Google</span>
                </button>
                <button class="flex items-center justify-center gap-2 h-12 bg-secondary border border-white/10 rounded-xl hover:bg-white/5 transition-colors">
                    <svg class="w-5 h-5" viewBox="0 0 24 24"><path fill="currentColor" d="M12 2C6.477 2 2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.879V14.89h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.989C18.343 21.129 22 16.99 22 12c0-5.523-4.477-10-10-10z"/></svg>
                    <span class="text-sm">Apple</span>
                </button>
            </div>
            
            <!-- Register Link -->
            <p class="text-center text-sm text-muted-foreground mt-8">
                Pas encore de compte ? 
                <a href="{{ path('app_register') }}" class="text-primary font-medium hover:underline">Créer un compte</a>
            </p>
        </div>
    </div>
</div>

<script>
    function togglePassword(btn) {
        const input = btn.parentElement.querySelector('input');
        const icon = btn.querySelector('i');
        if (input.type === 'password') {
            input.type = 'text';
            icon.setAttribute('data-lucide', 'eye-off');
        } else {
            input.type = 'password';
            icon.setAttribute('data-lucide', 'eye');
        }
        lucide.createIcons();
    }
    // Onglets login
    document.getElementById('tab-classic').addEventListener('click', function() {
        document.getElementById('form-classic').classList.remove('hidden');
        document.getElementById('form-face').classList.add('hidden');
        document.querySelectorAll('.tab-login').forEach(function(t) { t.classList.remove('bg-primary', 'text-white'); t.classList.add('text-muted-foreground'); });
        this.classList.add('bg-primary', 'text-white'); this.classList.remove('text-muted-foreground');
        stopFaceVideo();
    });
    document.getElementById('tab-face').addEventListener('click', function() {
        document.getElementById('form-classic').classList.add('hidden');
        document.getElementById('form-face').classList.remove('hidden');
        document.querySelectorAll('.tab-login').forEach(function(t) { t.classList.remove('bg-primary', 'text-white'); t.classList.add('text-muted-foreground'); });
        this.classList.add('bg-primary', 'text-white'); this.classList.remove('text-muted-foreground');
        startFaceVideo();
    });
    function startFaceVideo() {
        var v = document.getElementById('face-video');
        if (!v || !navigator.mediaDevices) return;
        navigator.mediaDevices.getUserMedia({ video: { facingMode: 'user', width: 640, height: 480 } }).then(function(stream) {
            v.srcObject = stream;
            window._faceStream = stream;
        }).catch(function() {
            document.getElementById('face-login-status').textContent = 'Accès à la caméra refusé ou indisponible.';
        });
    }
    function stopFaceVideo() {
        if (window._faceStream) {
            window._faceStream.getTracks().forEach(function(t) { t.stop(); });
            window._faceStream = null;
        }
        var v = document.getElementById('face-video');
        if (v) v.srcObject = null;
    }
</script>
{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/face-api.js@0.22.2/dist/face-api.min.js"></script>
<script>
(function() {
    var loginFaceUrl = {{ path('app_login_face')|json_encode|raw }};
    var csrfToken = {{ csrf_token('authenticate')|json_encode|raw }};
    var MODELS_URL = 'https://cdn.jsdelivr.net/npm/face-api.js@0.22.2/build/weights';
    var modelsLoaded = false;
    function loadModels() {
        if (modelsLoaded) return Promise.resolve();
        return Promise.all([
            faceapi.nets.tinyFaceDetector.loadFromUri(MODELS_URL),
            faceapi.nets.faceLandmark68Net.loadFromUri(MODELS_URL),
            faceapi.nets.faceRecognitionNet.loadFromUri(MODELS_URL)
        ]).then(function() { modelsLoaded = true; });
    }
    function sendDescriptorAndLogin(descriptor, statusEl, btn) {
        if (!descriptor || descriptor.length !== 128) return;
        if (btn) btn.disabled = true;
        statusEl.textContent = 'Vérification en cours...';
        fetch(loginFaceUrl, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json', 'X-Requested-With': 'XMLHttpRequest' },
            body: JSON.stringify({ descriptor: descriptor, _csrf_token: csrfToken })
        }).then(function(res) {
            if (res && res.redirected) {
                window.location.href = res.url;
                return;
            }
            if (res && !res.ok) {
                statusEl.textContent = 'Erreur. Réessayez ou connectez-vous avec email et mot de passe.';
            }
            if (btn) btn.disabled = false;
        }).catch(function(err) {
            console.error(err);
            statusEl.textContent = 'Erreur. Réessayez ou connectez-vous avec email et mot de passe.';
            if (btn) btn.disabled = false;
        });
    }

    document.getElementById('btn-login-face').addEventListener('click', function() {
        var video = document.getElementById('face-video');
        var statusEl = document.getElementById('face-login-status');
        var btn = this;
        if (!video || !video.srcObject) {
            statusEl.textContent = 'Veuillez autoriser la caméra (onglet Reconnaissance faciale).';
            return;
        }
        btn.disabled = true;
        statusEl.textContent = 'Vérification en cours...';
        loadModels().then(function() {
            return faceapi.detectSingleFace(video, new faceapi.TinyFaceDetectorOptions({ inputSize: 320 })).withFaceLandmarks().withFaceDescriptor();
        }).then(function(detection) {
            if (!detection) {
                statusEl.textContent = 'Aucun visage détecté. Placez votre visage face à la caméra.';
                btn.disabled = false;
                return;
            }
            sendDescriptorAndLogin(Array.from(detection.descriptor), statusEl, btn);
        }).catch(function(err) {
            console.error(err);
            statusEl.textContent = 'Erreur. Réessayez ou connectez-vous avec email et mot de passe.';
            btn.disabled = false;
        });
    });

    document.getElementById('face-photo-input').addEventListener('change', function(e) {
        var file = e.target.files[0];
        if (!file) return;
        var statusEl = document.getElementById('face-login-status');
        var img = new Image();
        img.onload = function() {
            statusEl.textContent = 'Analyse de la photo...';
            loadModels().then(function() {
                return faceapi.detectSingleFace(img, new faceapi.TinyFaceDetectorOptions()).withFaceLandmarks().withFaceDescriptor();
            }).then(function(detection) {
                if (!detection) {
                    statusEl.textContent = 'Aucun visage détecté sur cette photo. Utilisez une photo où votre visage est bien visible.';
                    return;
                }
                sendDescriptorAndLogin(Array.from(detection.descriptor), statusEl, null);
            }).catch(function(err) {
                console.error(err);
                statusEl.textContent = 'Erreur. Réessayez ou connectez-vous avec email et mot de passe.';
            });
        };
        img.src = URL.createObjectURL(file);
        e.target.value = '';
    });
})();
</script>

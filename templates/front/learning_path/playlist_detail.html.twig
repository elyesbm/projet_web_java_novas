{% extends 'front/base_home.html.twig' %}

{% block title %}Playlist : {{ skill.nomSkill }} - NoVas{% endblock %}

{% block body %}
<div class="min-h-screen bg-background">
    {% include 'front/partials/_auth_nav.html.twig' %}

    {# ‚îÄ‚îÄ Hero ‚îÄ‚îÄ #}
    <section class="pt-32 pb-10 px-6 relative overflow-hidden">
        <div class="absolute inset-0 gradient-orb"></div>
        <div class="absolute top-16 left-16 w-80 h-80 rounded-full blur-[120px]
            {{ skill.contexteSkill == 'hard' ? 'bg-blue-600/15' : 'bg-purple-600/15' }}"></div>

        <div class="max-w-5xl mx-auto relative">
            {# Breadcrumb #}
            <nav class="flex items-center gap-2 text-sm text-muted-foreground mb-8">
                <a href="{{ path('app_learning_paths_playlists') }}" class="hover:text-foreground transition-colors flex items-center gap-1.5">
                    <i data-lucide="list-music" class="w-3.5 h-3.5"></i>
                    Playlists
                </a>
                <i data-lucide="chevron-right" class="w-3.5 h-3.5"></i>
                <span class="text-foreground font-medium">{{ skill.nomSkill }}</span>
            </nav>

            <div class="flex flex-col md:flex-row md:items-end gap-6 justify-between">
                <div>
                    <div class="flex flex-wrap items-center gap-3 mb-4">
                        <span class="px-3 py-1.5 rounded-full text-xs font-medium
                            {{ skill.contexteSkill == 'hard' ? 'bg-blue-600/20 text-blue-400 border border-blue-500/20' : 'bg-purple-600/20 text-purple-400 border border-purple-500/20' }}">
                            {{ skill.contexteSkill == 'hard' ? 'üíª Hard Skill' : 'üß† Soft Skill' }}
                        </span>
                        <span class="px-3 py-1.5 rounded-full text-xs font-medium bg-secondary border border-white/10 text-muted-foreground">
                            {{ skill.categorie }}
                        </span>
                        {% if skill.tendanceMarche == 'en_hausse' %}
                        <span class="px-3 py-1.5 rounded-full text-xs font-medium bg-emerald-600/20 text-emerald-400 border border-emerald-500/20">
                            üìà En hausse
                        </span>
                        {% endif %}
                    </div>

                    <h1 class="font-serif text-4xl md:text-5xl font-medium mb-3">
                        Playlist : <span class="text-primary">{{ skill.nomSkill }}</span>
                    </h1>
                    {% if skill.descriptionSkill %}
                    <p class="text-muted-foreground text-lg max-w-2xl">{{ skill.descriptionSkill }}</p>
                    {% endif %}
                </div>

                {# Summary stats box #}
                <div class="glass-card rounded-2xl p-5 min-w-[220px] shrink-0">
                    <p class="text-xs text-muted-foreground uppercase tracking-wider mb-3">R√©sum√© de la playlist</p>
                    <div class="space-y-3">
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-muted-foreground flex items-center gap-2">
                                <i data-lucide="route" class="w-4 h-4 text-primary"></i> Parcours
                            </span>
                            <span class="font-bold text-foreground">{{ nb_total }}</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-muted-foreground flex items-center gap-2">
                                <i data-lucide="clock" class="w-4 h-4 text-amber-400"></i> Dur√©e totale
                            </span>
                            <span class="font-bold text-amber-400">
                                {% if duree_totale >= 60 %}
                                    {{ (duree_totale / 60)|round(1) }} j
                                {% else %}
                                    {{ duree_totale }} h
                                {% endif %}
                            </span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-muted-foreground flex items-center gap-2">
                                <i data-lucide="bar-chart-2" class="w-4 h-4 text-accent"></i> Niveaux
                            </span>
                            <span class="font-bold text-foreground">
                                {% for n in niveaux_presents %}{{ n == 1 ? 'üü°' : (n == 2 ? 'üîµ' : 'üü¢') }}{% endfor %}
                            </span>
                        </div>
                        {% if skill.scoreDemande %}
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-muted-foreground flex items-center gap-2">
                                <i data-lucide="trending-up" class="w-4 h-4 text-primary"></i> Demande
                            </span>
                            <span class="font-bold text-primary">{{ skill.scoreDemande }}/5</span>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# ‚îÄ‚îÄ Progress bar decoration ‚îÄ‚îÄ #}
    <div class="px-6 pb-8">
        <div class="max-w-5xl mx-auto">
            <div class="h-px bg-gradient-to-r from-transparent via-primary/40 to-transparent"></div>
        </div>
    </div>

    {# ‚îÄ‚îÄ Parcours list ‚îÄ‚îÄ #}
    <section class="px-6 pb-24">
        <div class="max-w-5xl mx-auto">

            {% if parcours is empty %}
            <div class="glass-card rounded-3xl p-12 text-center">
                <i data-lucide="route" class="w-12 h-12 text-muted-foreground mx-auto mb-4 opacity-40"></i>
                <h3 class="text-lg font-semibold mb-1">Aucun parcours actif</h3>
                <p class="text-muted-foreground text-sm">Revenez bient√¥t, les parcours sont en cours de cr√©ation.</p>
            </div>
            {% else %}

            {# Group by niveau #}
            {% set niveauLabels = {1: 'D√©butant', 2: 'Interm√©diaire', 3: 'Avanc√©'} %}
            {% set niveauColors = {1: 'amber', 2: 'blue', 3: 'emerald'} %}
            {% set niveauIcons  = {1: 'üü°', 2: 'üîµ', 3: 'üü¢'} %}

            {% for niveau in niveaux_presents %}
            {% set label = niveauLabels[niveau] ?? 'Autre' %}
            {% set color = niveauColors[niveau] ?? 'slate' %}
            {% set icon  = niveauIcons[niveau] ?? '‚ö™' %}

            {# Section header #}
            <div class="flex items-center gap-4 mb-5 {% if not loop.first %}mt-12{% endif %}">
                <div class="w-10 h-10 rounded-xl bg-{{ color }}-500/20 border border-{{ color }}-500/30 flex items-center justify-center text-lg">
                    {{ icon }}
                </div>
                <div>
                    <h2 class="text-lg font-semibold text-foreground">{{ label }}</h2>
                    <p class="text-xs text-muted-foreground">
                        {% set cnt = parcours|filter(lp => lp.niveauPath == niveau)|length %}
                        {{ cnt }} parcours ¬∑
                        {% set total = 0 %}{% for lp in parcours %}{% if lp.niveauPath == niveau %}{% set total = total + lp.dureeEstimee %}{% endif %}{% endfor %}
                        {{ total }} h
                    </p>
                </div>
                <div class="flex-1 h-px bg-gradient-to-r from-{{ color }}-500/30 to-transparent ml-2"></div>
            </div>

            {# Steps for this niveau ‚Äî filter parcours for current niveau #}
            {% set niveauParcours = parcours|filter(lp => lp.niveauPath == niveau) %}
            <div class="space-y-4">
                {% for lp in niveauParcours %}
                {% set typeIcone = lp.typeEtape == 'video' ? 'üé•' : (lp.typeEtape == 'exercice' ? 'üíª' : (lp.typeEtape == 'quiz' ? 'üß©' : 'üìù')) %}

                <div class="glass-card rounded-2xl p-5 flex flex-col sm:flex-row gap-4 hover:border-{{ color }}-500/30 transition-all duration-300 group">

                    {# Step number #}
                    <div class="shrink-0 flex sm:flex-col items-center sm:items-center gap-3 sm:gap-2">
                        <div class="w-10 h-10 rounded-xl bg-{{ color }}-500/20 border border-{{ color }}-500/30 text-{{ color }}-400 flex items-center justify-center font-bold text-sm">
                            {{ loop.index }}
                        </div>
                        {% if not loop.last %}
                        <div class="hidden sm:block flex-1 w-px bg-{{ color }}-500/20 mx-auto min-h-[20px]"></div>
                        {% endif %}
                    </div>

                    {# Content #}
                    <div class="flex-1 min-w-0">
                        <div class="flex flex-wrap items-start justify-between gap-2 mb-2">
                            <h3 class="font-semibold text-foreground group-hover:text-primary transition-colors text-lg">
                                {{ lp.titrePath }}
                            </h3>
                            <div class="flex items-center gap-2 shrink-0">
                                {% if lp.typeEtape %}
                                <span class="px-2.5 py-1 rounded-full text-xs bg-secondary border border-white/10 text-muted-foreground">
                                    {{ typeIcone }} {{ lp.typeEtape|capitalize }}
                                </span>
                                {% endif %}
                                <span class="flex items-center gap-1 text-xs text-amber-400 font-medium">
                                    <i data-lucide="clock" class="w-3.5 h-3.5"></i>
                                    {{ lp.dureeEstimee }} h
                                </span>
                            </div>
                        </div>

                        {% if lp.descriptionSkill %}
                        <p class="text-muted-foreground text-sm mb-3 line-clamp-2">{{ lp.descriptionSkill }}</p>
                        {% endif %}

                        <div class="flex flex-wrap items-center gap-3">
                            <a href="{{ path('app_learning_path_detail', { id: lp.id }) }}"
                               class="flex items-center gap-2 px-4 py-2 rounded-xl bg-primary text-white text-sm font-medium hover:bg-primary/90 transition-all shadow-lg shadow-primary/25 group/btn">
                                Commencer
                                <i data-lucide="arrow-right" class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform"></i>
                            </a>
                            {% if lp.url %}
                            <a href="{{ lp.url }}" target="_blank" rel="noopener"
                               class="flex items-center gap-1.5 text-sm text-muted-foreground hover:text-accent transition-colors">
                                <i data-lucide="external-link" class="w-3.5 h-3.5"></i>
                                Ressource externe
                            </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% endfor %}

            {# ‚îÄ‚îÄ Pagination ‚îÄ‚îÄ #}
            {% if total_pages > 1 %}
            <nav class="mt-10 flex items-center justify-center gap-2" aria-label="Pagination">
                {# Previous #}
                {% if current_page > 1 %}
                <a href="{{ path('app_learning_path_playlist_detail', { skillId: skill.id, page: current_page - 1 }) }}"
                   class="flex items-center gap-1.5 px-4 py-2.5 rounded-xl border border-white/10 text-sm text-muted-foreground hover:text-foreground hover:border-white/20 transition-all">
                    <i data-lucide="chevron-left" class="w-4 h-4"></i> Pr√©c√©dent
                </a>
                {% else %}
                <span class="flex items-center gap-1.5 px-4 py-2.5 rounded-xl border border-white/5 text-sm text-muted-foreground/40 cursor-not-allowed opacity-40">
                    <i data-lucide="chevron-left" class="w-4 h-4"></i> Pr√©c√©dent
                </span>
                {% endif %}

                {# Page numbers #}
                {% for p in 1..total_pages %}
                    {% if p == current_page %}
                    <span class="w-10 h-10 flex items-center justify-center rounded-xl bg-primary text-white text-sm font-bold shadow-lg shadow-primary/25">
                        {{ p }}
                    </span>
                    {% elseif p == 1 or p == total_pages or (p >= current_page - 1 and p <= current_page + 1) %}
                    <a href="{{ path('app_learning_path_playlist_detail', { skillId: skill.id, page: p }) }}"
                       class="w-10 h-10 flex items-center justify-center rounded-xl border border-white/10 text-sm text-muted-foreground hover:text-foreground hover:border-white/20 transition-all">
                        {{ p }}
                    </a>
                    {% elseif p == 2 or p == total_pages - 1 %}
                    <span class="w-6 flex items-center justify-center text-muted-foreground text-xs">¬∑¬∑¬∑</span>
                    {% endif %}
                {% endfor %}

                {# Next #}
                {% if current_page < total_pages %}
                <a href="{{ path('app_learning_path_playlist_detail', { skillId: skill.id, page: current_page + 1 }) }}"
                   class="flex items-center gap-1.5 px-4 py-2.5 rounded-xl border border-white/10 text-sm text-muted-foreground hover:text-foreground hover:border-white/20 transition-all">
                    Suivant <i data-lucide="chevron-right" class="w-4 h-4"></i>
                </a>
                {% else %}
                <span class="flex items-center gap-1.5 px-4 py-2.5 rounded-xl border border-white/5 text-sm text-muted-foreground/40 cursor-not-allowed opacity-40">
                    Suivant <i data-lucide="chevron-right" class="w-4 h-4"></i>
                </span>
                {% endif %}
            </nav>
            <p class="text-center text-xs text-muted-foreground mt-3">
                Page {{ current_page }} sur {{ total_pages }} ¬∑ {{ nb_total }} parcours au total
            </p>
            {% endif %}

            {# ‚îÄ‚îÄ Total recap at bottom ‚îÄ‚îÄ #}
            <div class="mt-12 glass-card rounded-2xl p-6 flex flex-wrap items-center justify-between gap-4 border-primary/20">
                <div>
                    <p class="text-sm text-muted-foreground">Estimation totale pour ma√Ætriser</p>
                    <p class="text-2xl font-bold text-foreground mt-0.5">{{ skill.nomSkill }}</p>
                </div>
                <div class="flex items-center gap-8">
                    <div class="text-center">
                        <p class="text-3xl font-bold text-primary">{{ nb_total }}</p>
                        <p class="text-xs text-muted-foreground">parcours</p>
                    </div>
                    <div class="text-center">
                        <p class="text-3xl font-bold text-amber-400">{{ duree_totale }}</p>
                        <p class="text-xs text-muted-foreground">heures</p>
                    </div>
                </div>
                <a href="{{ path('app_learning_paths_playlists') }}"
                   class="flex items-center gap-2 px-5 py-2.5 rounded-xl border border-white/10 text-muted-foreground hover:text-foreground hover:border-white/20 text-sm transition-all">
                    <i data-lucide="arrow-left" class="w-4 h-4"></i>
                    Toutes les playlists
                </a>
            </div>

            {% endif %}
        </div>
    </section>
</div>
{% endblock %}

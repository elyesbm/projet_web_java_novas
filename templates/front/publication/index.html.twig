<script>
    function toggleComments(pubId) {
        const commentsSection = document.getElementById('comments-' + pubId);
        commentsSection.classList.toggle('hidden');

        if (!commentsSection.classList.contains('hidden')) {
            setTimeout(() => {
                commentsSection.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            }, 100);
        }
    }

    document.addEventListener('click', function(e) {
        const replyBtn = e.target.closest('.reply-btn');
        if (!replyBtn) return;
        const commentId = replyBtn.getAttribute('data-comment-id');
        const pubId = replyBtn.getAttribute('data-pub-id');
        const parentInput = document.getElementById('comment-parent-id-' + pubId);
        const form = parentInput && parentInput.closest('form');
        if (parentInput && form) {
            parentInput.value = commentId;
            const textarea = form.querySelector('textarea');
            if (textarea) {
                textarea.focus();
                textarea.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
        }
    });
</script>

<script>
const publicationLikers = JSON.parse(document.getElementById('publication-likers-data')?.textContent || '{}');
const authUser = JSON.parse(document.getElementById('auth-user-data')?.textContent || 'null');
let openedLikesPublicationId = null;
const originalPublicationContent = {};

function getPublicationNodes(pubId) {
    return {
        title: document.getElementById('pub-title-' + pubId),
        content: document.getElementById('pub-content-' + pubId),
        status: document.getElementById('translate-status-' + pubId),
        translateBtn: document.getElementById('translate-btn-' + pubId),
        resetBtn: document.getElementById('translate-reset-' + pubId),
        langSelect: document.getElementById('translate-lang-' + pubId),
    };
}

function rememberOriginalPublication(pubId) {
    const key = String(pubId);
    if (originalPublicationContent[key]) {
        return;
    }

    const nodes = getPublicationNodes(pubId);
    if (!nodes.title || !nodes.content) {
        return;
    }

    originalPublicationContent[key] = {
        title: nodes.title.textContent || '',
        content: nodes.content.textContent || '',
    };
}

function setTranslationStatus(pubId, message, isError = false) {
    const statusEl = document.getElementById('translate-status-' + pubId);
    if (!statusEl) return;

    if (!message) {
        statusEl.classList.add('hidden');
        statusEl.textContent = '';
        statusEl.classList.remove('text-rose-400');
        statusEl.classList.add('text-primary/90');
        return;
    }

    statusEl.classList.remove('hidden');
    statusEl.textContent = message;
    statusEl.classList.toggle('text-rose-400', isError);
    statusEl.classList.toggle('text-primary/90', !isError);
}

function translatePublication(pubId) {
    const nodes = getPublicationNodes(pubId);
    if (!nodes.title || !nodes.content || !nodes.langSelect) return;

    rememberOriginalPublication(pubId);
    const target = nodes.langSelect.value || 'en';

    if (nodes.translateBtn) {
        nodes.translateBtn.disabled = true;
        nodes.translateBtn.classList.add('opacity-70', 'cursor-not-allowed');
    }

    fetch(`/publications/${pubId}/translate`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        },
        body: JSON.stringify({ target })
    })
    .then(response => response.json())
    .then(data => {
        if (!data.ok) {
            throw new Error(data.message || 'Traduction impossible');
        }

        nodes.title.textContent = data.title || '';
        nodes.content.textContent = data.content || '';
        if (nodes.resetBtn) {
            nodes.resetBtn.classList.remove('hidden');
        }

        setTranslationStatus(pubId, `Traduit en ${data.language_label || target}.`);
    })
    .catch((error) => {
        setTranslationStatus(pubId, error.message || 'Traduction impossible.', true);
    })
    .finally(() => {
        if (nodes.translateBtn) {
            nodes.translateBtn.disabled = false;
            nodes.translateBtn.classList.remove('opacity-70', 'cursor-not-allowed');
        }
    });
}

function resetPublicationTranslation(pubId) {
    const key = String(pubId);
    const original = originalPublicationContent[key];
    if (!original) return;

    const nodes = getPublicationNodes(pubId);
    if (!nodes.title || !nodes.content) return;

    nodes.title.textContent = original.title;
    nodes.content.textContent = original.content;
    if (nodes.resetBtn) {
        nodes.resetBtn.classList.add('hidden');
    }

    setTranslationStatus(pubId, '');
}

function likePublication(pubId) {
    reactPublication(pubId, 'like');
}

function getLikersList(pubId) {
    const key = String(pubId);
    if (!Array.isArray(publicationLikers[key])) {
        publicationLikers[key] = [];
    }
    return publicationLikers[key];
}

function getInitials(prenom, nom) {
    const p = (prenom || '').trim();
    const n = (nom || '').trim();
    return ((p.charAt(0) + n.charAt(0)) || '?').toUpperCase();
}

function renderLikesModalList(pubId) {
    const container = document.getElementById('likes-modal-list');
    if (!container) return;

    const likers = getLikersList(pubId);
    container.innerHTML = '';

    if (likers.length === 0) {
        const empty = document.createElement('p');
        empty.className = 'text-sm text-muted-foreground';
        empty.textContent = 'Aucun like pour le moment.';
        container.appendChild(empty);
        return;
    }

    likers.forEach((liker) => {
        const row = document.createElement('div');
        row.className = 'flex items-center gap-3 p-3 rounded-xl bg-secondary/40 border border-white/10';

        const avatar = document.createElement('div');
        avatar.className = 'w-10 h-10 rounded-full overflow-hidden bg-secondary flex items-center justify-center text-xs font-semibold text-muted-foreground';
        if (liker.image) {
            const img = document.createElement('img');
            img.src = `/images/${liker.image}`;
            img.alt = `${(liker.prenom || '').trim()} ${(liker.nom || '').trim()}`.trim() || 'Utilisateur';
            img.className = 'w-full h-full object-cover';
            avatar.appendChild(img);
        } else {
            avatar.textContent = getInitials(liker.prenom, liker.nom);
        }

        const meta = document.createElement('div');
        meta.className = 'min-w-0';

        const name = document.createElement('p');
        name.className = 'text-sm font-medium truncate';
        const fullName = `${(liker.prenom || '').trim()} ${(liker.nom || '').trim()}`.trim();
        name.textContent = fullName || 'Utilisateur';

        meta.appendChild(name);
        row.appendChild(avatar);
        row.appendChild(meta);
        container.appendChild(row);
    });
}

function openLikesModal(pubId) {
    const modal = document.getElementById('likes-modal');
    const title = document.getElementById('likes-modal-title');
    const countEl = document.getElementById('likes-' + pubId);
    if (!modal || !title) return;

    openedLikesPublicationId = String(pubId);
    title.textContent = `${countEl ? countEl.innerText : '0'} likes`;
    renderLikesModalList(pubId);

    modal.classList.remove('hidden');
    document.body.classList.add('overflow-hidden');
    if (window.lucide) lucide.createIcons();
}

function closeLikesModal() {
    const modal = document.getElementById('likes-modal');
    if (!modal) return;
    openedLikesPublicationId = null;
    modal.classList.add('hidden');
    document.body.classList.remove('overflow-hidden');
}

function syncLikersCache(pubId, userReaction) {
    if (!authUser || !authUser.id) return;

    const key = String(pubId);
    const authId = String(authUser.id);
    const existing = getLikersList(pubId);
    const filtered = existing.filter((item) => String(item.userId) !== authId);

    if (userReaction === 1) {
        filtered.unshift({
            userId: authUser.id,
            prenom: authUser.prenom || '',
            nom: authUser.nom || '',
            image: authUser.image || null,
            likedAt: null,
        });
    }

    publicationLikers[key] = filtered;
}

function reactPublication(pubId, action) {
    fetch(`/publications/${pubId}/${action}`, {
        method: 'POST',
        headers: {
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.ok) {
            document.getElementById('likes-' + pubId).innerText = data.likes;
            updateReactionButtons(pubId, data.user_reaction);
            syncLikersCache(pubId, data.user_reaction);

            if (openedLikesPublicationId === String(pubId)) {
                openLikesModal(pubId);
            }
            return;
        }
        alert('Action impossible');
    })
    .catch(() => {
        alert('Erreur lors de la reaction');
    });
}

function updateReactionButtons(pubId, userReaction) {
    const likeBtn = document.getElementById('like-btn-' + pubId);
    if (!likeBtn) return;

    likeBtn.classList.remove('text-primary', 'text-muted-foreground');
    likeBtn.classList.add(userReaction === 1 ? 'text-primary' : 'text-muted-foreground');
}

document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape') {
        closeLikesModal();
    }
});

{% extends 'front/base_user.html.twig' %}

{% block title %}Confirmer la 2FA - NoVas{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-background to-secondary">
    <div class="container mx-auto px-4 py-12">
        <div class="max-w-2xl mx-auto">
            <!-- Header -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold mb-2">Confirmer votre code d'authentification</h1>
                <p class="text-muted-foreground">Scannez le code QR avec votre application d'authentification</p>
            </div>

            <div class="grid md:grid-cols-2 gap-8">
                <!-- QR Code Section -->
                <div class="bg-card border border-white/10 rounded-lg p-8 flex flex-col items-center justify-center">
                    {% if qrCode and qrCode != '' %}
                        <div class="mb-4 bg-white p-4 rounded-lg shadow-lg">
                            <img src="{{ qrCode }}" alt="Code QR d'authentification" class="w-64 h-64 object-contain" loading="lazy">
                        </div>
                    {% else %}
                        <div class="w-64 h-64 bg-gray-800 rounded-lg flex items-center justify-center mb-4 border border-gray-600">
                            <div class="text-center">
                                <p class="text-gray-400 mb-2">QR code non disponible</p>
                                <p class="text-xs text-gray-500">Utilisez la clé manuelle ci-dessous</p>
                            </div>
                        </div>
                    {% endif %}
                    <p class="text-sm text-muted-foreground text-center">
                        {% if qrCode and qrCode != '' %}
                            Scannez ce code avec votre application d'authentification
                        {% else %}
                            Ou entrez la clé secrète manuellement
                        {% endif %}
                    </p>
                    <div class="mt-4 p-4 bg-secondary rounded-lg w-full">
                        <p class="text-xs text-muted-foreground mb-2">Ou entrez cette clé manuellement:</p>
                        <p class="font-mono text-sm break-all text-primary">{{ secret }}</p>
                    </div>
                </div>

                <!-- Form Section -->
                <div>
                    <!-- Backup Codes -->
                    <div class="bg-amber-500/10 border border-amber-500/30 rounded-lg p-6 mb-6">
                        <div class="flex gap-3 mb-4">
                            <i data-lucide="alert-triangle" class="w-5 h-5 text-amber-500 flex-shrink-0"></i>
                            <div>
                                <h3 class="font-semibold text-amber-100 mb-2">Codes de secours</h3>
                                <p class="text-sm text-amber-100/80 mb-4">
                                    Sauvegardez ces codes dans un endroit sûr. Vous pouvez les utiliser pour vous connecter 
                                    si vous n'avez pas accès à votre application d'authentification.
                                </p>
                                <div class="bg-background/50 rounded p-3 mb-4">
                                    <div class="grid grid-cols-2 gap-2 font-mono text-xs text-amber-100">
                                        {% for code in backupCodes %}
                                            <div class="break-all">{{ code }}</div>
                                        {% endfor %}
                                    </div>
                                </div>
                                <button type="button" class="text-sm text-amber-400 hover:text-amber-300 transition-colors" onclick="copyBackupCodes()">
                                    <i data-lucide="copy" class="w-4 h-4 inline mr-1"></i>
                                    Copier tous les codes
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Code Verification Form -->
                    <form method="POST" action="{{ path('app_2fa_setup_confirm') }}" class="space-y-4">
                        <div>
                            <label for="code" class="block text-sm font-medium mb-2">Code à 6 chiffres</label>
                            <input 
                                type="text" 
                                id="code"
                                name="code" 
                                maxlength="6"
                                pattern="[0-9]{6}"
                                inputmode="numeric"
                                autocomplete="off"
                                placeholder="000000"
                                class="w-full h-14 bg-secondary border border-white/10 rounded-lg px-4 text-center text-2xl tracking-widest font-mono focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-all"
                                required
                            >
                            <p class="text-xs text-muted-foreground mt-2">
                                Entrez le code à 6 chiffres généré par votre application
                            </p>
                        </div>

                        <div class="flex gap-3 pt-4">
                            <button type="submit" class="flex-1 h-12 bg-primary text-white rounded-lg font-medium hover:bg-primary/90 transition-all">
                                Vérifier et activer
                            </button>
                            <a href="{{ path('app_2fa_setup') }}" class="flex-1 h-12 bg-secondary border border-white/10 rounded-lg font-medium hover:bg-white/5 transition-colors flex items-center justify-center">
                                Recommencer
                            </a>
                        </div>
                    </form>

                    <!-- Help -->
                    <div class="bg-blue-500/10 border border-blue-500/30 rounded-lg p-4 mt-6">
                        <div class="flex gap-2">
                            <i data-lucide="info" class="w-4 h-4 text-blue-400 flex-shrink-0 mt-0.5"></i>
                            <div class="text-sm text-blue-100">
                                <p class="font-medium mb-1">Applications recommandées:</p>
                                <ul class="text-xs space-y-1">
                                    <li>• Google Authenticator</li>
                                    <li>• Microsoft Authenticator</li>
                                    <li>• Authy</li>
                                    <li>• FreeOTP</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function copyBackupCodes() {
        const codes = Array.from(document.querySelectorAll('.grid-cols-2 div')).map(el => el.textContent).join('\n');
        navigator.clipboard.writeText(codes).then(() => {
            alert('Codes de secours copiés!');
        });
    }

    // Auto focus on input and format
    document.getElementById('code').addEventListener('input', function(e) {
        this.value = this.value.replace(/[^0-9]/g, '').slice(0, 6);
    });
</script>
{% endblock %}

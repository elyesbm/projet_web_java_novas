{% extends 'front/base_home.html.twig' %}

{% block title %}{{ offre.titreOffre }} - NoVas Jobs{% endblock %}

{% block body %}
{% set restante = offre.capaciteRestante is defined ? offre.capaciteRestante : 0 %}
{% set can_apply = (offre.statutOffre == 'OUVERTE' and restante > 0) %}

{% include 'front/partials/_auth_nav.html.twig' %}

<section class="relative pt-32 pb-16">
    <div class="absolute inset-0 gradient-orb"></div>
    <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary/10 rounded-full blur-[120px]"></div>

    <div class="relative max-w-5xl mx-auto px-6">
        <div class="flex items-center gap-2 text-sm text-muted-foreground mb-8">
            <a href="{{ path('app_home') }}" class="hover:text-foreground">Accueil</a>
            <i data-lucide="chevron-right" class="w-4 h-4"></i>
            <a href="{{ path('front_jobs_index') }}" class="hover:text-foreground">Jobs</a>
            <i data-lucide="chevron-right" class="w-4 h-4"></i>
            <span class="text-foreground">Detail</span>
        </div>

        <div class="grid lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2 space-y-6">
                <div class="glass-card rounded-2xl p-8">
                    <div class="flex items-start justify-between mb-6">
                        <div class="flex items-center gap-4">
                            <div class="w-16 h-16 rounded-2xl bg-primary/20 flex items-center justify-center">
                                {% if offre.categorieOffre == 'TUTORAT' %}
                                    <i data-lucide="book-open" class="w-8 h-8 text-primary"></i>
                                {% elseif offre.categorieOffre == 'AIDE' %}
                                    <i data-lucide="help-circle" class="w-8 h-8 text-primary"></i>
                                {% else %}
                                    <i data-lucide="briefcase" class="w-8 h-8 text-primary"></i>
                                {% endif %}
                            </div>
                            <div>
                                <div class="flex items-center gap-2 mb-2">
                                    <span class="inline-block px-3 py-1 rounded-full text-xs font-medium bg-primary/20 text-primary">{{ offre.categorieOffre }}</span>
                                    {% if restante <= 0 %}
                                        <span class="inline-block px-3 py-1 rounded-full text-xs font-semibold bg-red-500/20 text-red-300">Complet</span>
                                    {% endif %}
                                </div>
                                <h1 class="text-2xl md:text-3xl font-bold">{{ offre.titreOffre }}</h1>
                            </div>
                        </div>

                        <div class="text-right">
                            <p class="text-sm text-muted-foreground">Statut</p>
                            <p class="text-lg font-semibold text-primary">{{ offre.statutOffre }}</p>
                        </div>
                    </div>

                    <div class="flex flex-wrap gap-4 mb-6 text-sm">
                        <div class="flex items-center gap-2 px-4 py-2 rounded-xl bg-white/5">
                            <i data-lucide="map-pin" class="w-4 h-4 text-primary"></i>
                            <span>{{ offre.lieu }}</span>
                        </div>
                        <div class="flex items-center gap-2 px-4 py-2 rounded-xl bg-white/5">
                            <i data-lucide="calendar" class="w-4 h-4 text-primary"></i>
                            <span>Publie le {{ offre.dateCreationOffre ? offre.dateCreationOffre|date('d/m/Y') : '-' }}</span>
                        </div>
                        <div class="flex items-center gap-2 px-4 py-2 rounded-xl bg-white/5">
                            <i data-lucide="users" class="w-4 h-4 text-primary"></i>
                            <span>{{ offre.candidatures|length }} candidature(s)</span>
                        </div>
                    </div>

                    <div class="mb-6 p-4 rounded-xl bg-white/5 border border-white/10 text-sm">
                        Places restantes: <span class="font-semibold">{{ restante }}</span>
                    </div>

                    <div class="space-y-4">
                        <h3 class="text-lg font-semibold flex items-center gap-2">
                            <i data-lucide="file-text" class="w-5 h-5 text-primary"></i>
                            Description
                        </h3>
                        <p class="text-sm text-muted-foreground leading-7 whitespace-pre-line">{{ offre.descriptionOffre }}</p>
                        <div>
                            <a href="{{ path('front_jobs_export_pdf', {'id': offre.id}) }}"
                               class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-primary/10 text-primary hover:bg-primary hover:text-white transition">
                                <i data-lucide="file-down" class="w-4 h-4"></i>
                                Exporter en PDF
                            </a>
                        </div>
                    </div>
                </div>

                <div class="glass-card rounded-2xl p-6">
                    <h3 class="text-lg font-semibold mb-4">A propos du createur</h3>
                    <div class="flex items-center gap-4">
                        <div class="w-16 h-16 rounded-full bg-primary/20 flex items-center justify-center text-xl font-bold text-primary">
                            {{ (offre.createur and offre.createur.email) ? offre.createur.email|first : '?' }}
                        </div>
                        <div class="flex-1">
                            <p class="font-semibold text-lg">{{ (offre.createur and offre.createur.email) ? offre.createur.email : 'Utilisateur' }}</p>
                            <p class="text-sm text-muted-foreground">Createur de l'offre</p>
                        </div>
                        <a href="mailto:{{ (offre.createur and offre.createur.email) ? offre.createur.email : '' }}"
                           class="px-4 py-2 rounded-xl border border-white/20 hover:bg-white/5 transition text-sm">
                            Contacter
                        </a>
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <div class="glass-card rounded-2xl p-6 sticky top-24">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="mb-4 p-4 rounded-xl border border-white/10 bg-background/40 text-sm">
                                <b class="text-primary">{{ label|upper }}</b> - {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {% if dejaPostule %}
                        <div class="text-center py-4">
                            <div class="w-16 h-16 rounded-full bg-accent/20 flex items-center justify-center mx-auto mb-4">
                                <i data-lucide="check" class="w-8 h-8 text-accent"></i>
                            </div>
                            <h3 class="font-semibold mb-2">Candidature envoyee</h3>
                            <p class="text-sm text-muted-foreground mb-4">Vous avez deja postule a cette offre.</p>
                            <a href="{{ path('front_jobs_my_candidatures') }}" class="block w-full py-3 rounded-xl bg-primary/10 text-primary text-center font-medium hover:bg-primary/20 transition">
                                Voir mes candidatures
                            </a>
                        </div>
                    {% elseif isCreateur %}
                        <div class="text-center py-4">
                            <div class="w-16 h-16 rounded-full bg-primary/20 flex items-center justify-center mx-auto mb-4">
                                <i data-lucide="settings" class="w-8 h-8 text-primary"></i>
                            </div>
                            <h3 class="font-semibold mb-2">Votre offre</h3>
                            <p class="text-sm text-muted-foreground mb-4">Gerez les candidatures recues.</p>

                            <a href="{{ path('front_jobs_candidatures', {'id': offre.id}) }}"
                               class="block w-full py-3 rounded-xl bg-primary text-white text-center font-medium hover:bg-primary/90 transition mb-3">
                                Voir les candidatures
                            </a>

                            <a href="{{ path('front_jobs_edit', {'id': offre.id}) }}"
                               class="block w-full py-3 rounded-xl border border-white/20 text-center font-medium hover:bg-white/5 transition">
                                Modifier l'offre
                            </a>
                        </div>
                    {% else %}
                        <h3 class="text-lg font-semibold mb-4">Postuler a cette offre</h3>

                        {% if not can_apply %}
                            <div class="p-4 rounded-xl border border-red-500/40 bg-red-500/10 text-sm text-red-200">
                                Cette offre n'accepte plus de candidatures.
                            </div>
                        {% else %}
                            <form action="{{ path('front_jobs_apply', {'id': offre.id}) }}" method="POST" enctype="multipart/form-data" class="space-y-4">
                                <input type="hidden" name="_token" value="{{ csrf_token('jobs_apply_' ~ offre.id) }}">
                                <div>
                                    <label class="block text-sm font-medium mb-2">Votre message</label>
                                    <textarea name="message_candidature" rows="4"
                                              placeholder="Presentez-vous et expliquez pourquoi vous etes interesse..."
                                              class="w-full px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none resize-none text-sm" required></textarea>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium mb-2">CV (PDF, max 2 Mo)</label>
                                    <input type="file" name="cv_file" accept="application/pdf,.pdf"
                                           class="w-full px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none text-sm">
                                    <p class="text-xs text-muted-foreground mt-2">Ajoutez votre CV en PDF pour appuyer votre candidature.</p>
                                </div>
                                <button type="submit" class="w-full py-3 rounded-xl bg-primary text-white font-medium hover:bg-primary/90 transition shadow-lg shadow-primary/25">
                                    Envoyer ma candidature
                                </button>
                            </form>
                            <p class="text-xs text-muted-foreground text-center mt-4">
                                Le createur recevra votre candidature et vous repondra sous 48h.
                            </p>
                        {% endif %}
                    {% endif %}
                </div>

                <div class="glass-card rounded-2xl p-6">
                    <h3 class="text-lg font-semibold mb-4">Offres similaires</h3>
                    <div class="space-y-4">
                        {% for similar in jobsSimilaires %}
                            <a href="{{ path('front_jobs_detail', {'id': similar.id}) }}" class="block p-4 rounded-xl bg-white/5 hover:bg-white/10 transition group">
                                <h4 class="font-medium text-sm group-hover:text-primary transition-colors">{{ similar.titreOffre }}</h4>
                                <p class="text-xs text-muted-foreground mt-1">{{ similar.categorieOffre }} - {{ similar.lieu }}</p>
                            </a>
                        {% else %}
                            <p class="text-sm text-muted-foreground">Aucune offre similaire.</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% extends 'front/base_home.html.twig' %}

{% block title %}Publier une offre - NoVas Jobs{% endblock %}

{% block body %}
{% set is_edit = (mode is defined and mode == 'edit') %}
{% include 'front/partials/_auth_nav.html.twig' %}

<section class="relative pt-32 pb-16 min-h-screen">
  <div class="absolute inset-0 gradient-orb"></div>
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-primary/10 rounded-full blur-[120px]"></div>

  <div class="relative max-w-3xl mx-auto px-6">
    <div class="text-center mb-12">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-primary/30 bg-primary/10 text-primary text-sm mb-6">
        <i data-lucide="plus" class="w-4 h-4"></i>
        Nouvelle opportunite
      </div>
      <h1 class="font-serif text-3xl md:text-4xl font-medium mb-4">
        {{ is_edit ? 'Modifier une' : 'Publier une' }} <span class="italic text-primary">offre</span>
      </h1>
      <p class="text-muted-foreground">Decrivez votre besoin et trouvez l'etudiant ideal.</p>
    </div>

    <div class="glass-card rounded-2xl p-8">
      {% if errors is defined and errors %}
        <div class="mb-4 p-4 rounded-xl border border-red-500/30 bg-red-500/10 text-sm">
          <ul class="list-disc list-inside">
            {% for field, message in errors %}
              <li>{{ message }}</li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      <form method="POST" action="{{ mode == 'edit' and offre ? path('front_jobs_edit', {'id': offre.id}) : path('front_jobs_add') }}" class="space-y-6">
        <input type="hidden" name="_token" value="{{ mode == 'edit' and offre ? csrf_token('jobs_form_edit_' ~ offre.id) : csrf_token('jobs_form_create') }}">

        <div>
          <label class="block text-sm font-medium mb-3">Categorie</label>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
            <label class="cursor-pointer">
              <input type="radio" name="categorie_offre" value="TUTORAT" class="peer sr-only" {{ (form.categorie_offre|default('TUTORAT')) == 'TUTORAT' ? 'checked' : '' }}>
              <div class="p-4 rounded-xl border border-white/10 peer-checked:border-primary peer-checked:bg-primary/10 transition text-center">
                <i data-lucide="book-open" class="w-6 h-6 mx-auto mb-2 text-primary"></i>
                <span class="text-sm font-medium">Tutorat</span>
              </div>
            </label>

            <label class="cursor-pointer">
              <input type="radio" name="categorie_offre" value="AIDE" class="peer sr-only" {{ (form.categorie_offre|default('TUTORAT')) == 'AIDE' ? 'checked' : '' }}>
              <div class="p-4 rounded-xl border border-white/10 peer-checked:border-primary peer-checked:bg-primary/10 transition text-center">
                <i data-lucide="help-circle" class="w-6 h-6 mx-auto mb-2 text-primary"></i>
                <span class="text-sm font-medium">Aide academique</span>
              </div>
            </label>

            <label class="cursor-pointer">
              <input type="radio" name="categorie_offre" value="CREATION" class="peer sr-only" {{ (form.categorie_offre|default('TUTORAT')) == 'CREATION' ? 'checked' : '' }}>
              <div class="p-4 rounded-xl border border-white/10 peer-checked:border-primary peer-checked:bg-primary/10 transition text-center">
                <i data-lucide="users" class="w-6 h-6 mx-auto mb-2 text-primary"></i>
                <span class="text-sm font-medium">Creation</span>
              </div>
            </label>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">Titre de l'offre</label>
          <input type="text" name="titre_offre" placeholder="Ex: Cours de maths niveau L1"
                 value="{{ form.titre_offre|default('') }}"
                 class="w-full px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none transition-colors">
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">Description detaillee</label>
          <textarea id="offer-text-to-check" name="description_offre" rows="6"
                    placeholder="Decrivez la mission, les taches attendues, le profil recherche..."
                    class="w-full px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none resize-none transition-colors">{{ form.description_offre|default('') }}</textarea>
          <div class="mt-3 flex items-center gap-3">
            <button id="btn-check-offer-text" type="button" class="px-4 py-2 rounded-xl border border-primary/40 text-primary hover:bg-primary/10 transition text-sm">
              Verifier le texte
            </button>
            <span class="text-xs text-muted-foreground">Correction orthographique et qualite du texte</span>
          </div>
          <div id="offer-text-check-result" class="hidden mt-3 p-4 rounded-xl border border-white/10 bg-background/50 text-sm"></div>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">Lieu</label>
          <div class="grid grid-cols-2 gap-3">
            <label class="cursor-pointer">
              <input type="radio" name="lieu" value="EN_LIGNE" class="peer sr-only" {{ (form.lieu|default('EN_LIGNE')) == 'EN_LIGNE' ? 'checked' : '' }}>
              <div class="p-4 rounded-xl border border-white/10 peer-checked:border-primary peer-checked:bg-primary/10 transition text-center">
                <i data-lucide="wifi" class="w-6 h-6 mx-auto mb-2 text-primary"></i>
                <span class="text-sm font-medium">En ligne</span>
              </div>
            </label>

            <label class="cursor-pointer">
              <input type="radio" name="lieu" value="PRESENTIEL" class="peer sr-only" {{ (form.lieu|default('EN_LIGNE')) == 'PRESENTIEL' ? 'checked' : '' }}>
              <div class="p-4 rounded-xl border border-white/10 peer-checked:border-primary peer-checked:bg-primary/10 transition text-center">
                <i data-lucide="map-pin" class="w-6 h-6 mx-auto mb-2 text-primary"></i>
                <span class="text-sm font-medium">Presentiel</span>
              </div>
            </label>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">Capacite maximale</label>
          <input type="number" name="capacite_max" min="1" value="{{ form.capacite_max|default(5) }}"
                 class="w-full px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none transition-colors">
          <p class="text-xs text-muted-foreground mt-2">Nombre maximum de candidatures acceptees.</p>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">Date d expiration</label>
          <input type="datetime-local" name="date_expiration"
                 value="{{ form.date_expiration|default('') }}"
                 class="w-full px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none transition-colors">
          <p class="text-xs text-muted-foreground mt-2">La date doit etre dans le futur.</p>
        </div>

        <input type="hidden" name="statut_offre" value="{{ form.statut_offre|default('OUVERTE') }}">

        <div class="flex gap-4 pt-4">
          <button type="submit" class="flex-1 py-4 rounded-xl bg-primary text-white font-medium hover:bg-primary/90 transition shadow-lg shadow-primary/25">
            <i data-lucide="check" class="w-5 h-5 inline mr-2"></i>
            {{ is_edit ? 'Enregistrer' : "Publier l'offre" }}
          </button>
          <a href="{{ path('front_jobs_index') }}" class="px-8 py-4 rounded-xl border border-white/20 font-medium hover:bg-white/5 transition">
            Annuler
          </a>
        </div>
      </form>
    </div>
  </div>
</section>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script>
    (function () {
      const textarea = document.getElementById('offer-text-to-check');
      const button = document.getElementById('btn-check-offer-text');
      const resultBox = document.getElementById('offer-text-check-result');

      if (!textarea || !button || !resultBox) {
        return;
      }

      const escapeHtml = (value) => {
        const div = document.createElement('div');
        div.textContent = value;
        return div.innerHTML;
      };

      const getBadgeClass = (score) => {
        if (score >= 80) {
          return 'bg-green-500/20 text-green-300 border-green-500/40';
        }
        if (score >= 60) {
          return 'bg-orange-500/20 text-orange-300 border-orange-500/40';
        }
        return 'bg-red-500/20 text-red-300 border-red-500/40';
      };

      const renderResult = (payload) => {
        const totalErrors = Number(payload.totalErrors || 0);
        const qualityScore = Number(payload.qualityScore || 0);
        const matches = Array.isArray(payload.matches) ? payload.matches : [];

        let errorsHtml = '<p class="text-xs text-muted-foreground mt-2">Aucune erreur detectee.</p>';
        if (matches.length > 0) {
          const items = matches.map((match) => {
            const message = escapeHtml(match.message || 'Erreur');
            const replacements = Array.isArray(match.replacements) && match.replacements.length > 0
              ? match.replacements.map((item) => escapeHtml(item)).join(', ')
              : 'Aucune suggestion';
            return `<li class="py-2 border-b border-white/5 last:border-b-0"><p class="font-medium">${message}</p><p class="text-xs text-muted-foreground mt-1">Suggestions: ${replacements}</p></li>`;
          }).join('');
          errorsHtml = `<ul class="mt-2">${items}</ul>`;
        }

        resultBox.className = 'mt-3 p-4 rounded-xl border border-white/10 bg-background/50 text-sm';
        resultBox.innerHTML = `
          <div class="flex items-center justify-between gap-3">
            <p class="font-medium">Erreurs detectees: ${totalErrors}</p>
            <span class="px-3 py-1 rounded-full border text-xs font-semibold ${getBadgeClass(qualityScore)}">
              Score qualite: ${qualityScore}/100
            </span>
          </div>
          ${errorsHtml}
        `;
      };

      const renderError = (message) => {
        resultBox.className = 'mt-3 p-4 rounded-xl border border-red-500/30 bg-red-500/10 text-sm text-red-200';
        resultBox.textContent = message;
      };

      button.addEventListener('click', async () => {
        const text = textarea.value.trim();
        if (!text) {
          renderError('Veuillez saisir une description avant la verification.');
          return;
        }

        const originalText = button.textContent;
        button.disabled = true;
        button.textContent = 'Verification...';

        try {
          const response = await fetch('{{ path('app_api_text_check_offer') }}', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'Accept': 'application/json'
            },
            body: JSON.stringify({
              text: text,
              language: 'fr'
            })
          });

          const data = await response.json().catch(() => ({ error: 'Reponse serveur invalide.' }));
          if (!response.ok) {
            throw new Error(data.error || 'Erreur pendant la verification.');
          }

          renderResult(data);
        } catch (error) {
          renderError(error.message || 'Service de correction indisponible.');
        } finally {
          button.disabled = false;
          button.textContent = originalText;
        }
      });
    })();
  </script>
{% endblock %}

{% extends 'front/base_home.html.twig' %}

{% block title %}Publier une offre - NoVas Jobs{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css">
{% endblock %}

{% block body %}
{% set is_edit = (mode is defined and mode == 'edit') %}
{% include 'front/partials/_auth_nav.html.twig' %}

<section class="relative pt-32 pb-16 min-h-screen">
  <div class="absolute inset-0 gradient-orb"></div>
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-primary/10 rounded-full blur-[120px]"></div>

  <div class="relative max-w-3xl mx-auto px-6">
    <div class="text-center mb-12">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-primary/30 bg-primary/10 text-primary text-sm mb-6">
        <i data-lucide="plus" class="w-4 h-4"></i>
        Nouvelle opportunite
      </div>
      <h1 class="font-serif text-3xl md:text-4xl font-medium mb-4">
        {{ is_edit ? 'Modifier une' : 'Publier une' }} <span class="italic text-primary">offre</span>
      </h1>
      <p class="text-muted-foreground">Decrivez votre besoin et trouvez l'etudiant ideal.</p>
    </div>

    <div class="glass-card rounded-2xl p-8">
      {% if errors is defined and errors %}
        <div class="mb-4 p-4 rounded-xl border border-red-500/30 bg-red-500/10 text-sm">
          <ul class="list-disc list-inside">
            {% for field, message in errors %}
              <li>{{ message }}</li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      <form method="POST" action="{{ mode == 'edit' and offre ? path('front_jobs_edit', {'id': offre.id}) : path('front_jobs_add') }}" class="space-y-6">
        <input type="hidden" name="_token" value="{{ mode == 'edit' and offre ? csrf_token('jobs_form_edit_' ~ offre.id) : csrf_token('jobs_form_create') }}">

        <div>
          <label class="block text-sm font-medium mb-3">Categorie</label>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
            <label class="cursor-pointer">
              <input type="radio" name="categorie_offre" value="TUTORAT" class="peer sr-only" {{ (form.categorie_offre|default('TUTORAT')) == 'TUTORAT' ? 'checked' : '' }}>
              <div class="p-4 rounded-xl border border-white/10 peer-checked:border-primary peer-checked:bg-primary/10 transition text-center">
                <i data-lucide="book-open" class="w-6 h-6 mx-auto mb-2 text-primary"></i>
                <span class="text-sm font-medium">Tutorat</span>
              </div>
            </label>

            <label class="cursor-pointer">
              <input type="radio" name="categorie_offre" value="AIDE" class="peer sr-only" {{ (form.categorie_offre|default('TUTORAT')) == 'AIDE' ? 'checked' : '' }}>
              <div class="p-4 rounded-xl border border-white/10 peer-checked:border-primary peer-checked:bg-primary/10 transition text-center">
                <i data-lucide="help-circle" class="w-6 h-6 mx-auto mb-2 text-primary"></i>
                <span class="text-sm font-medium">Aide academique</span>
              </div>
            </label>

            <label class="cursor-pointer">
              <input type="radio" name="categorie_offre" value="CREATION" class="peer sr-only" {{ (form.categorie_offre|default('TUTORAT')) == 'CREATION' ? 'checked' : '' }}>
              <div class="p-4 rounded-xl border border-white/10 peer-checked:border-primary peer-checked:bg-primary/10 transition text-center">
                <i data-lucide="users" class="w-6 h-6 mx-auto mb-2 text-primary"></i>
                <span class="text-sm font-medium">Creation</span>
              </div>
            </label>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">Titre de l'offre</label>
          <input id="offer-title-input" type="text" name="titre_offre" placeholder="Ex: Cours de maths niveau L1"
                 value="{{ form.titre_offre|default('') }}"
                 class="w-full px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none transition-colors">
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">Description detaillee</label>
          <textarea id="offer-text-to-check" name="description_offre" rows="6"
                    placeholder="Decrivez la mission, les taches attendues, le profil recherche..."
                    class="w-full px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none resize-none transition-colors">{{ form.description_offre|default('') }}</textarea>
          <div class="mt-3 flex items-center gap-3">
            <button id="btn-check-offer-text" type="button" class="px-4 py-2 rounded-xl border border-primary/40 text-primary hover:bg-primary/10 transition text-sm">
              Verifier le texte
            </button>
            <button id="btn-ai-optimize-offer" type="button" class="px-4 py-2 rounded-xl border border-accent/40 text-accent hover:bg-accent/10 transition text-sm">
              Optimiser avec IA
            </button>
            <span class="text-xs text-muted-foreground">Correction orthographique et qualite du texte</span>
          </div>
          <div id="offer-text-check-result" class="hidden mt-3 p-4 rounded-xl border border-white/10 bg-background/50 text-sm"></div>
          <div id="offer-ai-optimize-result" class="hidden mt-3 p-4 rounded-xl border border-white/10 bg-background/50 text-sm"></div>
          <div id="offer-ai-tags" class="hidden mt-3 flex flex-wrap gap-2"></div>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">Lieu</label>
          <div class="grid grid-cols-2 gap-3">
            <label class="cursor-pointer">
              <input type="radio" name="lieu" value="EN_LIGNE" class="peer sr-only" {{ (form.lieu|default('EN_LIGNE')) == 'EN_LIGNE' ? 'checked' : '' }}>
              <div class="p-4 rounded-xl border border-white/10 peer-checked:border-primary peer-checked:bg-primary/10 transition text-center">
                <i data-lucide="wifi" class="w-6 h-6 mx-auto mb-2 text-primary"></i>
                <span class="text-sm font-medium">En ligne</span>
              </div>
            </label>

            <label class="cursor-pointer">
              <input type="radio" name="lieu" value="PRESENTIEL" class="peer sr-only" {{ (form.lieu|default('EN_LIGNE')) == 'PRESENTIEL' ? 'checked' : '' }}>
              <div class="p-4 rounded-xl border border-white/10 peer-checked:border-primary peer-checked:bg-primary/10 transition text-center">
                <i data-lucide="map-pin" class="w-6 h-6 mx-auto mb-2 text-primary"></i>
                <span class="text-sm font-medium">Presentiel</span>
              </div>
            </label>
          </div>
        </div>

        <div id="presentiel-fields" class="{{ (form.lieu|default('EN_LIGNE')) == 'PRESENTIEL' ? '' : 'hidden' }}">
          <label class="block text-sm font-medium mb-2">Adresse (presentiel)</label>
          <div class="flex flex-col md:flex-row gap-3">
            <input id="job-adresse-input" type="text" name="adresse"
                   value="{{ form.adresse|default('') }}"
                   placeholder="Ex: Avenue Habib Bourguiba, Tunis"
                   class="flex-1 px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none transition-colors">
            <button id="btn-localiser-adresse" type="button" class="px-4 py-3 rounded-xl border border-primary/40 text-primary hover:bg-primary/10 transition text-sm whitespace-nowrap">
              Localiser
            </button>
          </div>
          <input id="job-latitude-input" type="hidden" name="latitude" value="{{ form.latitude|default('') }}">
          <input id="job-longitude-input" type="hidden" name="longitude" value="{{ form.longitude|default('') }}">
          <p id="job-geocode-feedback" class="text-xs text-muted-foreground mt-2">
            Renseignez l adresse puis cliquez sur "Localiser".
          </p>
          <div id="job-map-preview" class="mt-3 h-64 rounded-xl border border-white/10 overflow-hidden {{ (form.latitude|default('') != '' and form.longitude|default('') != '') ? '' : 'hidden' }}"></div>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">Capacite maximale</label>
          <input type="number" name="capacite_max" min="1" value="{{ form.capacite_max|default(5) }}"
                 class="w-full px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none transition-colors">
          <p class="text-xs text-muted-foreground mt-2">Nombre maximum de candidatures acceptees.</p>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">Date d expiration</label>
          <input type="datetime-local" name="date_expiration"
                 value="{{ form.date_expiration|default('') }}"
                 class="w-full px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none transition-colors">
          <p class="text-xs text-muted-foreground mt-2">La date doit etre dans le futur.</p>
        </div>

        <input type="hidden" name="statut_offre" value="{{ form.statut_offre|default('OUVERTE') }}">

        <div class="flex gap-4 pt-4">
          <button type="submit" class="flex-1 py-4 rounded-xl bg-primary text-white font-medium hover:bg-primary/90 transition shadow-lg shadow-primary/25">
            <i data-lucide="check" class="w-5 h-5 inline mr-2"></i>
            {{ is_edit ? 'Enregistrer' : "Publier l'offre" }}
          </button>
          <a href="{{ path('front_jobs_index') }}" class="px-8 py-4 rounded-xl border border-white/20 font-medium hover:bg-white/5 transition">
            Annuler
          </a>
        </div>
      </form>
    </div>
  </div>
</section>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
  <script>
    (function () {
      const textarea = document.getElementById('offer-text-to-check');
      const button = document.getElementById('btn-check-offer-text');
      const aiButton = document.getElementById('btn-ai-optimize-offer');
      const resultBox = document.getElementById('offer-text-check-result');
      const aiResultBox = document.getElementById('offer-ai-optimize-result');
      const aiTagsContainer = document.getElementById('offer-ai-tags');
      const titleInput = document.getElementById('offer-title-input');
      const lieuInputs = document.querySelectorAll('input[name="lieu"]');
      const presentielFields = document.getElementById('presentiel-fields');
      const adresseInput = document.getElementById('job-adresse-input');
      const latitudeInput = document.getElementById('job-latitude-input');
      const longitudeInput = document.getElementById('job-longitude-input');
      const localiserButton = document.getElementById('btn-localiser-adresse');
      const geocodeFeedback = document.getElementById('job-geocode-feedback');
      const mapContainer = document.getElementById('job-map-preview');
      let map = null;
      let marker = null;

      if (!textarea || !button || !resultBox || !titleInput) {
        return;
      }

      const isPresentiel = () => {
        const selected = document.querySelector('input[name="lieu"]:checked');
        return selected && selected.value === 'PRESENTIEL';
      };

      const togglePresentielFields = () => {
        if (!presentielFields) {
          return;
        }

        if (isPresentiel()) {
          presentielFields.classList.remove('hidden');
          return;
        }

        presentielFields.classList.add('hidden');
        if (mapContainer) {
          mapContainer.classList.add('hidden');
        }
      };

      const ensureMap = (lat, lon) => {
        if (!mapContainer || typeof L === 'undefined') {
          return null;
        }

        if (!map) {
          map = L.map(mapContainer).setView([lat, lon], 14);
          L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
            attribution: '&copy; OpenStreetMap contributors'
          }).addTo(map);
        }

        return map;
      };

      const showMarker = (lat, lon, label) => {
        const leafletMap = ensureMap(lat, lon);
        if (!leafletMap || !mapContainer) {
          return;
        }

        mapContainer.classList.remove('hidden');
        leafletMap.invalidateSize();
        leafletMap.setView([lat, lon], 15);

        if (!marker) {
          marker = L.marker([lat, lon]).addTo(leafletMap);
        } else {
          marker.setLatLng([lat, lon]);
        }

        if (label) {
          marker.bindPopup(label).openPopup();
        }
      };

      const setGeocodeFeedback = (message, type) => {
        if (!geocodeFeedback) {
          return;
        }

        const baseClass = 'text-xs mt-2';
        if (type === 'error') {
          geocodeFeedback.className = baseClass + ' text-red-300';
        } else if (type === 'success') {
          geocodeFeedback.className = baseClass + ' text-green-300';
        } else {
          geocodeFeedback.className = baseClass + ' text-muted-foreground';
        }

        geocodeFeedback.textContent = message;
      };

      if (localiserButton && adresseInput && latitudeInput && longitudeInput) {
        localiserButton.addEventListener('click', async () => {
          const adresse = adresseInput.value.trim();
          if (!adresse) {
            setGeocodeFeedback('Veuillez saisir une adresse.', 'error');
            return;
          }

          const original = localiserButton.textContent;
          localiserButton.disabled = true;
          localiserButton.textContent = 'Localisation...';

          try {
            const response = await fetch('{{ path('app_api_geocode') }}', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
              },
              body: JSON.stringify({ adresse })
            });

            const data = await response.json().catch(() => ({ error: 'Reponse geocodage invalide.' }));
            if (!response.ok) {
              throw new Error(data.error || 'Adresse introuvable.');
            }

            latitudeInput.value = String(data.lat);
            longitudeInput.value = String(data.lon);
            setGeocodeFeedback('Adresse localisee: ' + (data.displayName || adresse), 'success');
            showMarker(Number(data.lat), Number(data.lon), data.displayName || adresse);
          } catch (error) {
            setGeocodeFeedback(error.message || 'Service de geocodage indisponible.', 'error');
          } finally {
            localiserButton.disabled = false;
            localiserButton.textContent = original;
          }
        });
      }

      const escapeHtml = (value) => {
        const div = document.createElement('div');
        div.textContent = value;
        return div.innerHTML;
      };

      const getBadgeClass = (score) => {
        if (score >= 80) {
          return 'bg-green-500/20 text-green-300 border-green-500/40';
        }
        if (score >= 60) {
          return 'bg-orange-500/20 text-orange-300 border-orange-500/40';
        }
        return 'bg-red-500/20 text-red-300 border-red-500/40';
      };

      let currentMatches = [];

      const replaceByOffset = (sourceText, offset, length, replacement) => {
        const chars = Array.from(sourceText);
        const safeOffset = Number.isFinite(offset) ? Math.max(0, offset) : 0;
        const safeLength = Number.isFinite(length) ? Math.max(0, length) : 0;
        const end = Math.min(chars.length, safeOffset + safeLength);
        chars.splice(safeOffset, end - safeOffset, ...Array.from(replacement));
        return chars.join('');
      };

      const applySuggestion = (matchIndex, replacementIndex, triggerElement) => {
        const match = currentMatches[matchIndex];
        if (!match || !Array.isArray(match.replacements) || !match.replacements[replacementIndex]) {
          return;
        }

        const replacement = String(match.replacements[replacementIndex]);
        const before = textarea.value;
        const after = replaceByOffset(before, Number(match.offset || 0), Number(match.length || 0), replacement);

        if (before === after) {
          renderError('Impossible d appliquer la suggestion sur le texte actuel. Relancez la verification.');
          return;
        }

        const replacementLength = Array.from(replacement).length;
        const delta = replacementLength - Number(match.length || 0);
        const pivot = Number(match.offset || 0);

        currentMatches = currentMatches.map((item, index) => {
          if (index === matchIndex || !item || typeof item !== 'object') {
            return item;
          }

          const itemOffset = Number(item.offset || 0);
          if (itemOffset > pivot) {
            return { ...item, offset: itemOffset + delta };
          }

          return item;
        });

        textarea.value = after;
        textarea.focus();

        if (triggerElement) {
          triggerElement.disabled = true;
          triggerElement.classList.add('opacity-60', 'line-through');
        }
      };

      const renderResult = (payload) => {
        const totalErrors = Number(payload.totalErrors || 0);
        const qualityScore = Number(payload.qualityScore || 0);
        const matches = Array.isArray(payload.matches) ? payload.matches : [];
        currentMatches = matches.map((item) => ({
          ...item,
          offset: Number(item.offset || 0),
          length: Number(item.length || 0),
          replacements: Array.isArray(item.replacements) ? item.replacements : []
        }));

        let errorsHtml = '<p class="text-xs text-muted-foreground mt-2">Aucune erreur detectee.</p>';
        if (currentMatches.length > 0) {
          const items = currentMatches.map((match, matchIndex) => {
            const message = escapeHtml(match.message || 'Erreur');
            const replacementsHtml = match.replacements.length > 0
              ? match.replacements.map((item, replacementIndex) => (
                `<button type="button" class="js-offer-suggestion mr-2 mb-2 px-2 py-1 rounded-lg border border-primary/40 text-primary hover:bg-primary/10 transition text-xs" data-match-index="${matchIndex}" data-replacement-index="${replacementIndex}">${escapeHtml(item)}</button>`
              )).join('')
              : '<span class="text-xs text-muted-foreground">Aucune suggestion</span>';
            return `<li class="py-2 border-b border-white/5 last:border-b-0"><p class="font-medium">${message}</p><p class="text-xs text-muted-foreground mt-1 mb-2">Cliquez une suggestion pour corriger automatiquement:</p><div>${replacementsHtml}</div></li>`;
          }).join('');
          errorsHtml = `<ul class="mt-2">${items}</ul>`;
        }

        resultBox.className = 'mt-3 p-4 rounded-xl border border-white/10 bg-background/50 text-sm';
        resultBox.innerHTML = `
          <div class="flex items-center justify-between gap-3">
            <p class="font-medium">Erreurs detectees: ${totalErrors}</p>
            <span class="px-3 py-1 rounded-full border text-xs font-semibold ${getBadgeClass(qualityScore)}">
              Score qualite: ${qualityScore}/100
            </span>
          </div>
          ${errorsHtml}
        `;

        resultBox.querySelectorAll('.js-offer-suggestion').forEach((element) => {
          element.addEventListener('click', () => {
            const matchIndex = Number(element.getAttribute('data-match-index'));
            const replacementIndex = Number(element.getAttribute('data-replacement-index'));
            applySuggestion(matchIndex, replacementIndex, element);
          });
        });
      };

      const renderError = (message) => {
        currentMatches = [];
        resultBox.className = 'mt-3 p-4 rounded-xl border border-red-500/30 bg-red-500/10 text-sm text-red-200';
        resultBox.textContent = message;
      };

      const renderAiError = (message) => {
        if (!aiResultBox) {
          return;
        }

        aiResultBox.className = 'mt-3 p-4 rounded-xl border border-red-500/30 bg-red-500/10 text-sm text-red-200';
        aiResultBox.textContent = message;
      };

      const renderAiSuccess = (payload) => {
        if (!aiResultBox) {
          return;
        }

        aiResultBox.className = 'mt-3 p-4 rounded-xl border border-emerald-500/30 bg-emerald-500/10 text-sm text-emerald-200';
        aiResultBox.textContent = 'Optimisation IA appliquee au formulaire.';
        renderAiTags(payload);
      };

      const renderAiWarning = (payload, message) => {
        if (!aiResultBox) {
          return;
        }

        aiResultBox.className = 'mt-3 p-4 rounded-xl border border-orange-500/30 bg-orange-500/10 text-sm text-orange-200';
        aiResultBox.textContent = message;
        renderAiTags(payload);
      };

      const renderAiTags = (payload) => {
        if (!aiTagsContainer) {
          return;
        }

        const tags = Array.isArray(payload.tags) ? payload.tags.filter((tag) => typeof tag === 'string' && tag.trim() !== '') : [];
        if (tags.length === 0) {
          aiTagsContainer.classList.add('hidden');
          aiTagsContainer.innerHTML = '';
          return;
        }

        const badges = tags.map((tag) => {
          const clean = escapeHtml(tag.trim());
          return `<span class="px-3 py-1 rounded-full text-xs border border-accent/40 text-accent bg-accent/10">${clean}</span>`;
        });

        aiTagsContainer.classList.remove('hidden');
        aiTagsContainer.innerHTML = badges.join('');
      };

      const applySuggestedCategory = (category) => {
        const normalized = String(category || '').toLowerCase().trim();
        const map = {
          tutorat: 'TUTORAT',
          creation: 'CREATION',
          aide: 'AIDE',
          aide_academique: 'AIDE'
        };
        const expectedValue = map[normalized];
        if (!expectedValue) {
          return;
        }

        const radio = document.querySelector(`input[name="categorie_offre"][value="${expectedValue}"]`);
        if (radio) {
          radio.checked = true;
          radio.dispatchEvent(new Event('change', { bubbles: true }));
        }
      };

      lieuInputs.forEach((input) => {
        input.addEventListener('change', togglePresentielFields);
      });
      togglePresentielFields();

      if (mapContainer && latitudeInput && longitudeInput && latitudeInput.value !== '' && longitudeInput.value !== '') {
        showMarker(Number(latitudeInput.value), Number(longitudeInput.value), adresseInput ? adresseInput.value : '');
      }

      button.addEventListener('click', async () => {
        const text = textarea.value.trim();
        if (!text) {
          renderError('Veuillez saisir une description avant la verification.');
          return;
        }

        const originalText = button.textContent;
        button.disabled = true;
        button.textContent = 'Verification...';

        try {
          const response = await fetch('{{ path('app_api_text_check_offer') }}', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'Accept': 'application/json'
            },
            body: JSON.stringify({
              text: text,
              language: 'fr'
            })
          });

          const data = await response.json().catch(() => ({ error: 'Reponse serveur invalide.' }));
          if (!response.ok) {
            throw new Error(data.error || 'Erreur pendant la verification.');
          }

          renderResult(data);
        } catch (error) {
          renderError(error.message || 'Service de correction indisponible.');
        } finally {
          button.disabled = false;
          button.textContent = originalText;
        }
      });

      if (aiButton) {
        aiButton.addEventListener('click', async () => {
          const title = titleInput.value.trim();
          const description = textarea.value.trim();

          if (!title || title.length < 3) {
            renderAiError('Veuillez saisir un titre valide (min 3 caracteres).');
            return;
          }

          if (!description || description.length < 10) {
            renderAiError('Veuillez saisir une description valide (min 10 caracteres).');
            return;
          }

          const initialLabel = aiButton.textContent;
          aiButton.disabled = true;
          aiButton.textContent = 'Optimisation IA...';

          try {
            const response = await fetch('{{ path('app_api_ai_offer_optimize') }}', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
              },
              body: JSON.stringify({
                title: title,
                description: description
              })
            });

            const data = await response.json().catch(() => ({ error: 'Reponse IA invalide.' }));
            if (!response.ok) {
              throw new Error(data.error || 'Erreur pendant l optimisation IA.');
            }

            if (typeof data.optimizedTitle === 'string' && data.optimizedTitle.trim() !== '') {
              titleInput.value = data.optimizedTitle.trim();
            }
            if (typeof data.optimizedDescription === 'string' && data.optimizedDescription.trim() !== '') {
              textarea.value = data.optimizedDescription.trim();
            }
            applySuggestedCategory(data.suggestedCategory);
            if (data.fallback === true) {
              renderAiWarning(data, data.warning || 'Service IA temporairement indisponible, optimisation locale appliqu\u00e9e.');
            } else {
              renderAiSuccess(data);
            }
          } catch (error) {
            renderAiError(error.message || 'Le service IA est indisponible.');
          } finally {
            aiButton.disabled = false;
            aiButton.textContent = initialLabel;
          }
        });
      }
    })();
  </script>
{% endblock %}

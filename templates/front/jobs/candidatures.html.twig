{% extends 'front/base_home.html.twig' %}

{% block title %}Candidatures - {{ offre.titreOffre|default('Offre') }} - NoVas{% endblock %}

{% block body %}
{% set can_manage = can_manage|default(false) %}
<!-- Navigation -->
{% include 'front/partials/_main_nav.html.twig' %}

<!-- Content -->
<section class="relative pt-32 pb-16 min-h-screen">
    <div class="absolute inset-0 gradient-orb"></div>
    <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary/10 rounded-full blur-[120px]"></div>

    <div class="relative max-w-5xl mx-auto px-6">
        <!-- Job Info -->
        <div class="glass-card rounded-2xl p-6 mb-8">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                <div>
                    <span class="text-sm text-muted-foreground">Offre</span>
                    <h1 class="text-xl font-semibold">{{ offre.titreOffre|default('—') }}</h1>
                </div>
                <div class="flex items-center gap-4">
                    <div class="text-right">
                        <p class="text-2xl font-bold text-primary">{{ candidatures|length }}</p>
                        <p class="text-sm text-muted-foreground">Candidature(s)</p>
                    </div>
                    <div class="w-12 h-12 rounded-xl bg-primary/20 flex items-center justify-center">
                        <i data-lucide="users" class="w-6 h-6 text-primary"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Candidatures List -->
        <div class="space-y-4">
            {% for candidature in candidatures %}
            {% set st = candidature.statutCandidature %}
            {% set isWait = (st == 'EN_ATTENTE') %}
            {% set isOk = (st == 'ACCEPTEE') %}
            {% set isNo = (st == 'REFUSEE') %}
            <div class="glass-card rounded-2xl p-6 {% if isOk %}border-accent/30{% elseif isNo %}border-red-500/30 opacity-60{% endif %}">
                <div class="flex flex-col md:flex-row gap-6">
                    <!-- Candidate Info -->
                    <div class="flex items-start gap-4 md:w-1/3">
                        <div class="w-14 h-14 rounded-full bg-primary/20 flex items-center justify-center text-xl font-bold text-primary flex-shrink-0">
                            {{ candidature.candidat and candidature.candidat.NOM ? candidature.candidat.NOM|first : '?' }}
                        </div>
                        <div>
                            <h3 class="font-semibold">
                                {{ candidature.candidat ? (candidature.candidat.PRENOM ~ ' ' ~ candidature.candidat.NOM) : 'Candidat' }}
                            </h3>
                            <p class="text-sm text-muted-foreground">
                                {{ candidature.candidat and candidature.candidat.EMAIL ? candidature.candidat.EMAIL : '—' }}
                            </p>
                            <p class="text-xs text-muted-foreground mt-2">
                                Postule le {{ candidature.dateCandidature ? candidature.dateCandidature|date('d/m/Y') : '—' }}
                            </p>
                        </div>
                    </div>

                    <!-- Message -->
                    <div class="flex-1 md:border-l md:border-white/10 md:pl-6">
                        <h4 class="text-sm font-medium mb-2 text-muted-foreground">Message du candidat</h4>
                        <p class="text-sm leading-relaxed bg-white/5 rounded-xl p-4">{{ candidature.messageCandidature|default('') }}</p>
                    </div>

                    <!-- Status -->
                    <div class="flex md:flex-col gap-2 md:w-48">
                        {% if isWait %}
                        <div class="w-full py-2 rounded-xl bg-yellow-500/20 text-yellow-500 text-center font-medium flex items-center justify-center gap-2">
                            <i data-lucide="clock" class="w-4 h-4"></i>
                            En attente
                        </div>
                        {% elseif isOk %}
                        <div class="w-full py-2 rounded-xl bg-accent/20 text-accent text-center font-medium flex items-center justify-center gap-2">
                            <i data-lucide="check-circle" class="w-4 h-4"></i>
                            Acceptee
                        </div>
                        {% else %}
                        <div class="w-full py-2 rounded-xl bg-red-500/20 text-red-400 text-center font-medium flex items-center justify-center gap-2">
                            <i data-lucide="x-circle" class="w-4 h-4"></i>
                            Refusee
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% else %}
            <div class="text-center py-16 glass-card rounded-2xl">
                <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="inbox" class="w-8 h-8 text-primary"></i>
                </div>
                <h3 class="font-semibold mb-2">Aucune candidature</h3>
                <p class="text-muted-foreground">Les candidatures apparaitront ici.</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}

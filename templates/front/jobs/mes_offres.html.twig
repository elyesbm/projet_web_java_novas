{% extends 'front/base_home.html.twig' %}

{% block title %}Mes offres - NoVas Jobs{% endblock %}

{% block body %}
{% set q = q|default('') %}
{% set statut_filter = statut_filter|default('') %}
{% set sort = sort|default('date') %}
{% set dir = dir|default('desc') %}
<!-- Navigation -->
{% include 'front/partials/_auth_nav.html.twig' %}

<!-- Content -->
<section class="relative pt-32 pb-16 min-h-screen">
    <div class="absolute inset-0 gradient-orb"></div>
    <div class="absolute top-0 left-1/4 w-[400px] h-[400px] bg-primary/10 rounded-full blur-[120px]"></div>

    <div class="relative max-w-6xl mx-auto px-6">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-8">
            <div>
                <h1 class="font-serif text-3xl font-medium mb-2">Mes <span class="italic text-primary">offres</span></h1>
                <p class="text-muted-foreground">Gerez vos opportunites et suivez les candidatures.</p>
            </div>

            <!-- Tabs -->
            <div class="flex p-1 rounded-xl bg-white/5 border border-white/10">
                <a href="{{ path('front_jobs_my_offres') }}"
                   class="px-4 py-2 rounded-lg text-sm font-medium {{ statut_filter is empty ? 'bg-primary text-white' : 'text-muted-foreground hover:text-foreground transition' }}">
                    Toutes
                </a>
                <a href="{{ path('front_jobs_my_offres', {'statut': 'OUVERTE'}) }}"
                   class="px-4 py-2 rounded-lg text-sm font-medium {{ statut_filter == 'OUVERTE' ? 'bg-primary text-white' : 'text-muted-foreground hover:text-foreground transition' }}">
                    Ouvertes
                </a>
                <a href="{{ path('front_jobs_my_offres', {'statut': 'FERMEE'}) }}"
                   class="px-4 py-2 rounded-lg text-sm font-medium {{ statut_filter == 'FERMEE' ? 'bg-primary text-white' : 'text-muted-foreground hover:text-foreground transition' }}">
                    Fermees
                </a>
            </div>
        </div>

        <!-- Search -->
        <form method="get" action="{{ path('front_jobs_my_offres') }}" class="glass-card rounded-2xl p-6 mb-8">
            <div class="flex flex-col md:flex-row gap-4">
                <div class="flex-1 relative">
                    <i data-lucide="search" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-muted-foreground"></i>
                    <input type="text" name="q" value="{{ q }}"
                           placeholder="Rechercher mes offres (titre, description, categorie, lieu)..."
                           class="w-full pl-12 pr-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none text-sm" />
                </div>
                <div class="flex flex-wrap gap-3">
                    <input type="hidden" name="statut" value="{{ statut_filter }}">
                    <select name="sort" class="px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none text-sm">
                        <option value="date" {{ sort == 'date' ? 'selected' : '' }}>Trier: Date</option>
                        <option value="titre" {{ sort == 'titre' ? 'selected' : '' }}>Trier: Titre</option>
                        <option value="categorie" {{ sort == 'categorie' ? 'selected' : '' }}>Trier: Categorie</option>
                        <option value="lieu" {{ sort == 'lieu' ? 'selected' : '' }}>Trier: Lieu</option>
                        <option value="statut" {{ sort == 'statut' ? 'selected' : '' }}>Trier: Statut</option>
                    </select>
                    <select name="dir" class="px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none text-sm">
                        <option value="desc" {{ dir == 'desc' ? 'selected' : '' }}>Desc</option>
                        <option value="asc" {{ dir == 'asc' ? 'selected' : '' }}>Asc</option>
                    </select>
                    <button class="px-6 py-3 rounded-xl bg-primary text-white font-medium hover:bg-primary/90 transition" type="submit">
                        Rechercher
                    </button>
                </div>
            </div>
        </form>

        <!-- Stats Cards -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
            <div class="glass-card rounded-xl p-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-primary/20 flex items-center justify-center">
                        <i data-lucide="briefcase" class="w-5 h-5 text-primary"></i>
                    </div>
                    <div>
                        <p class="text-2xl font-bold">{{ stats.total }}</p>
                        <p class="text-xs text-muted-foreground">Offres publiees</p>
                    </div>
                </div>
            </div>
            <div class="glass-card rounded-xl p-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-accent/20 flex items-center justify-center">
                        <i data-lucide="activity" class="w-5 h-5 text-accent"></i>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-accent">{{ stats.actives }}</p>
                        <p class="text-xs text-muted-foreground">Actives</p>
                    </div>
                </div>
            </div>
            <div class="glass-card rounded-xl p-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-primary/20 flex items-center justify-center">
                        <i data-lucide="users" class="w-5 h-5 text-primary"></i>
                    </div>
                    <div>
                        <p class="text-2xl font-bold">{{ stats.candidatures }}</p>
                        <p class="text-xs text-muted-foreground">Candidatures</p>
                    </div>
                </div>
            </div>
            <div class="glass-card rounded-xl p-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-lg bg-accent/20 flex items-center justify-center">
                        <i data-lucide="check-circle" class="w-5 h-5 text-accent"></i>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-accent">{{ stats.pourvues }}</p>
                        <p class="text-xs text-muted-foreground">Fermees</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Jobs List -->
        <div class="space-y-4">
            {% for offre in offres %}
            {% set st = offre.statutOffre|default('OUVERTE') %}
            <div class="glass-card rounded-2xl p-6 hover:border-primary/30 transition-all group">
                <div class="flex flex-col lg:flex-row gap-6">
                    <!-- Info -->
                    <div class="flex-1">
                        <div class="flex items-start justify-between mb-2">
                            <div class="flex items-center gap-3">
                                <span class="px-3 py-1 rounded-full text-xs font-medium
                                    {{ st == 'OUVERTE' ? 'bg-accent/20 text-accent' : 'bg-primary/20 text-primary' }}">
                                    {{ st == 'OUVERTE' ? 'Ouverte' : 'Fermee' }}
                                </span>
                                <span class="text-xs text-muted-foreground">Publiee le {{ offre.dateCreationOffre ? offre.dateCreationOffre|date('d/m/Y') : '—' }}</span>
                            </div>
                        </div>

                        <h3 class="text-lg font-semibold mb-2">{{ offre.titreOffre|default('Sans titre') }}</h3>
                        <p class="text-sm text-muted-foreground mb-4 line-clamp-2">{{ offre.descriptionOffre|default('') }}</p>

                        <div class="flex flex-wrap gap-3 text-sm text-muted-foreground">
                            <span class="flex items-center gap-1">
                                <i data-lucide="map-pin" class="w-4 h-4"></i>
                                {{ offre.lieu|default('—') }}
                            </span>
                            <span class="flex items-center gap-1">
                                <i data-lucide="tag" class="w-4 h-4"></i>
                                {{ offre.categorieOffre|default('—') }}
                            </span>
                            <span class="flex items-center gap-1">
                                <i data-lucide="users" class="w-4 h-4"></i>
                                {{ offre.candidatures|length }} candidature(s)
                            </span>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="flex lg:flex-col gap-2 lg:border-l lg:border-white/10 lg:pl-6">
                        <a href="{{ path('front_jobs_candidatures', {'id': offre.id}) }}"
                           class="flex items-center justify-center gap-2 px-4 py-2 rounded-xl bg-primary/10 text-primary hover:bg-primary hover:text-white transition text-sm font-medium">
                            <i data-lucide="users" class="w-4 h-4"></i>
                            Candidatures
                        </a>
                        <a href="{{ path('front_jobs_edit', {'id': offre.id}) }}"
                           class="flex items-center justify-center gap-2 px-4 py-2 rounded-xl border border-white/20 hover:bg-white/5 transition text-sm">
                            <i data-lucide="edit" class="w-4 h-4"></i>
                            Modifier
                        </a>
                        <form method="post" action="{{ path('front_jobs_delete', {'id': offre.id}) }}" onsubmit="return confirm('Supprimer cette offre ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('jobs_delete_' ~ offre.id) }}">
                            <button type="submit"
                                    class="flex items-center justify-center gap-2 px-4 py-2 rounded-xl border border-red-500/30 text-red-400 hover:bg-red-500/10 transition text-sm w-full">
                                <i data-lucide="trash-2" class="w-4 h-4"></i>
                                Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            {% else %}
            <div class="text-center py-16 glass-card rounded-2xl">
                <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
                    <i data-lucide="inbox" class="w-8 h-8 text-primary"></i>
                </div>
                <h3 class="font-semibold mb-2">Aucune offre publiee</h3>
                <p class="text-muted-foreground mb-6">Commencez par creer votre premiere opportunite.</p>
                <a href="{{ path('front_jobs_add') }}" class="inline-flex items-center gap-2 bg-primary text-white px-6 py-3 rounded-xl font-medium hover:bg-primary/90 transition">
                    <i data-lucide="plus" class="w-5 h-5"></i>
                    Creer une offre
                </a>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}

{% extends 'front/base_home.html.twig' %}

{% block title %}Offres d'emploi etudiant - NoVas{% endblock %}

{% block body %}
{% set q = q|default('') %}
{% set categorie = categorie|default('') %}
{% set lieu = lieu|default('') %}
{% set statut = statut|default('') %}
{% set sort = sort|default('date') %}
{% set dir = dir|default('desc') %}

{% include 'front/partials/_auth_nav.html.twig' %}

<section class="relative pt-32 pb-16 overflow-hidden">
    <div class="absolute inset-0 gradient-orb"></div>
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[600px] bg-primary/10 rounded-full blur-[120px]"></div>
    <div class="relative max-w-7xl mx-auto px-6">
        <div class="text-center mb-12">
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full border border-primary/30 bg-primary/10 text-primary text-sm mb-6">
                <i data-lucide="briefcase" class="w-4 h-4"></i>
                Opportunites d'apprentissage
            </div>
            <h1 class="font-serif text-4xl md:text-5xl font-medium mb-4">
                Trouvez votre <span class="italic text-primary">prochaine mission</span>
            </h1>
            <p class="text-muted-foreground max-w-2xl mx-auto">
                Tutorat, aide academique, activites pratiques... Decouvrez des opportunites adaptees a votre profil.
            </p>
        </div>

        <form method="get" action="{{ path('front_jobs_index') }}" class="glass-card rounded-2xl p-6 mb-12 max-w-4xl mx-auto">
            <div class="flex flex-col md:flex-row gap-4">
                <div class="flex-1 relative">
                    <i data-lucide="search" class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-muted-foreground"></i>
                    <input type="text" name="q" value="{{ q }}"
                           placeholder="Rechercher une offre (titre, description, categorie, lieu)..."
                           class="w-full pl-12 pr-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none text-sm">
                </div>
            </div>
            <div class="flex flex-wrap gap-3 mt-4">
                <select name="categorie" class="px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none text-sm">
                    <option value="">Categorie</option>
                    {% for key, label in categorie_options %}
                        <option value="{{ key }}" {{ categorie == key ? 'selected' : '' }}>{{ label }}</option>
                    {% endfor %}
                </select>
                <select name="lieu" class="px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none text-sm">
                    <option value="">Lieu</option>
                    {% for key, label in lieu_options %}
                        <option value="{{ key }}" {{ lieu == key ? 'selected' : '' }}>{{ label }}</option>
                    {% endfor %}
                </select>
                <select name="statut" class="px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none text-sm">
                    <option value="">Statut</option>
                    {% for key, label in statut_options %}
                        <option value="{{ key }}" {{ statut == key ? 'selected' : '' }}>{{ label }}</option>
                    {% endfor %}
                </select>
                <select name="sort" class="px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none text-sm">
                    <option value="date" {{ sort == 'date' ? 'selected' : '' }}>Trier: Date</option>
                    <option value="titre" {{ sort == 'titre' ? 'selected' : '' }}>Trier: Titre</option>
                    <option value="categorie" {{ sort == 'categorie' ? 'selected' : '' }}>Trier: Categorie</option>
                    <option value="lieu" {{ sort == 'lieu' ? 'selected' : '' }}>Trier: Lieu</option>
                    <option value="statut" {{ sort == 'statut' ? 'selected' : '' }}>Trier: Statut</option>
                </select>
                <select name="dir" class="px-4 py-3 rounded-xl bg-background/50 border border-white/10 focus:border-primary/50 focus:outline-none text-sm">
                    <option value="desc" {{ dir == 'desc' ? 'selected' : '' }}>Desc</option>
                    <option value="asc" {{ dir == 'asc' ? 'selected' : '' }}>Asc</option>
                </select>
                <button class="px-6 py-3 rounded-xl bg-primary text-white font-medium hover:bg-primary/90 transition" type="submit">
                    Filtrer
                </button>
            </div>
        </form>

        {% set stats_offres = offres_for_stats|default([]) %}
        {% set total = stats_offres|length %}
        {% set tutorat = 0 %}
        {% set aide = 0 %}
        {% set autres = 0 %}
        {% for o in stats_offres %}
            {% set cat = (o.categorieOffre|default('')|lower) %}
            {% if 'tutor' in cat %}
                {% set tutorat = tutorat + 1 %}
            {% elseif 'aide' in cat %}
                {% set aide = aide + 1 %}
            {% else %}
                {% set autres = autres + 1 %}
            {% endif %}
        {% endfor %}

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12 max-w-4xl mx-auto">
            <div class="glass-card rounded-xl p-4 text-center">
                <p class="text-2xl font-bold text-primary">{{ total }}</p>
                <p class="text-xs text-muted-foreground">Offres</p>
            </div>
            <div class="glass-card rounded-xl p-4 text-center">
                <p class="text-2xl font-bold text-accent">{{ tutorat }}</p>
                <p class="text-xs text-muted-foreground">Tutorat</p>
            </div>
            <div class="glass-card rounded-xl p-4 text-center">
                <p class="text-2xl font-bold text-primary">{{ aide }}</p>
                <p class="text-xs text-muted-foreground">Aide</p>
            </div>
            <div class="glass-card rounded-xl p-4 text-center">
                <p class="text-2xl font-bold text-accent">{{ autres }}</p>
                <p class="text-xs text-muted-foreground">Autres</p>
            </div>
        </div>
    </div>
</section>

<section class="py-12 relative">
    <div class="max-w-7xl mx-auto px-6">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for offre in offres|default([]) %}
                {% set cat = offre.categorieOffre|default('')|lower %}
                {% set restante = offre.capaciteRestante is defined ? offre.capaciteRestante : 0 %}
                <div class="glass-card rounded-2xl p-6 hover:border-primary/30 transition-all group relative overflow-hidden">
                    <div class="absolute top-0 right-0 w-32 h-32 bg-primary/5 rounded-full blur-3xl -mr-16 -mt-16 group-hover:bg-primary/10 transition-colors"></div>
                    <div class="relative">
                        <div class="flex items-start justify-between mb-4">
                            <div class="w-12 h-12 rounded-xl bg-primary/20 flex items-center justify-center">
                                {% if 'tutor' in cat %}
                                    <i data-lucide="book-open" class="w-6 h-6 text-primary"></i>
                                {% elseif 'aide' in cat %}
                                    <i data-lucide="help-circle" class="w-6 h-6 text-primary"></i>
                                {% else %}
                                    <i data-lucide="briefcase" class="w-6 h-6 text-primary"></i>
                                {% endif %}
                            </div>
                            <div class="flex items-center gap-2">
                                <span class="px-3 py-1 rounded-full text-xs font-medium {% if 'tutor' in cat %}bg-primary/20 text-primary{% elseif 'aide' in cat %}bg-accent/20 text-accent{% else %}bg-primary/10 text-primary{% endif %}">
                                    {{ offre.categorieOffre|default('-') }}
                                </span>
                                {% if restante <= 0 %}
                                    <span class="px-3 py-1 rounded-full text-xs font-semibold bg-red-500/20 text-red-300">Complet</span>
                                {% endif %}
                            </div>
                        </div>

                        <h3 class="text-lg font-semibold mb-2 group-hover:text-primary transition-colors">{{ offre.titreOffre|default('Sans titre') }}</h3>
                        <p class="text-sm text-muted-foreground mb-4 line-clamp-2">{{ offre.descriptionOffre|default('') }}</p>

                        <div class="flex items-center gap-4 mb-3 text-sm">
                            <div class="flex items-center gap-1.5 text-muted-foreground">
                                <i data-lucide="map-pin" class="w-4 h-4"></i>
                                <span>{{ offre.lieu|default('-') }}</span>
                            </div>
                            <div class="flex items-center gap-1.5 text-muted-foreground">
                                <i data-lucide="calendar" class="w-4 h-4"></i>
                                <span>{{ offre.dateCreationOffre ? offre.dateCreationOffre|date('d/m/Y') : '-' }}</span>
                            </div>
                        </div>

                        <div class="mb-4 text-sm text-muted-foreground">
                            Places restantes: <span class="font-semibold text-foreground">{{ restante }}</span>
                        </div>

                        <div class="flex items-center justify-between pt-4 border-t border-white/10">
                            <div class="flex items-center gap-2">
                                <div class="w-8 h-8 rounded-full bg-primary/20 flex items-center justify-center text-xs font-semibold text-primary">
                                    {{ (offre.createur and offre.createur.email) ? offre.createur.email|first : '?' }}
                                </div>
                                <div class="text-sm">
                                    <p class="font-medium">{{ (offre.createur and offre.createur.email) ? offre.createur.email : 'Utilisateur' }}</p>
                                    <p class="text-xs text-muted-foreground">{{ offre.statutOffre|default('OUVERTE') }}</p>
                                </div>
                            </div>
                        </div>

                        <a href="{{ path('front_jobs_detail', {'id': offre.id}) }}"
                           class="mt-4 block w-full py-3 rounded-xl bg-primary/10 text-primary text-center font-medium hover:bg-primary hover:text-white transition-all">
                            Voir l'offre
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="col-span-full text-center py-16">
                    <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mx-auto mb-4">
                        <i data-lucide="inbox" class="w-8 h-8 text-primary"></i>
                    </div>
                    <p class="text-muted-foreground">Aucune offre disponible pour le moment</p>
                </div>
            {% endfor %}
        </div>

        {% if offres.pageCount > 1 %}
            <div class="mt-12 d-flex justify-content-center">
                {{ knp_pagination_render(offres, 'pagination/jobs_pagination.html.twig') }}
            </div>
        {% endif %}
    </div>
</section>

<section class="py-24 relative overflow-hidden mt-12">
    <div class="absolute inset-0 bg-primary/5"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-primary/20 rounded-full blur-[100px]"></div>
    <div class="relative max-w-4xl mx-auto px-6 text-center">
        <h2 class="font-serif text-3xl md:text-4xl font-medium mb-4">Vous cherchez de l'aide pour vos etudes ?</h2>
        <p class="text-muted-foreground mb-8">Publiez une offre et trouvez l'etudiant parfait pour vous accompagner.</p>
        <a href="{{ path('front_jobs_add') }}" class="inline-flex items-center gap-2 bg-primary text-white px-8 py-4 rounded-2xl font-medium hover:bg-primary/90 transition-all shadow-xl shadow-primary/30">
            <i data-lucide="plus" class="w-5 h-5"></i>
            Publier une offre
        </a>
    </div>
</section>
{% endblock %}

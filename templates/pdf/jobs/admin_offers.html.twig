<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>NoVas Jobs - Admin Export</title>
    <style>
        @page { margin: 14mm; }
        body {
            margin: 0;
            font-family: DejaVu Sans, sans-serif;
            color: #1f2937;
            font-size: 10px;
            line-height: 1.4;
            background: #f8fafc;
        }
        .page {
            border: 1px solid #dbe3ee;
            background: #ffffff;
        }
        .header {
            background: #111827;
            color: #f9fafb;
            padding: 12px 16px 10px;
            border-bottom: 3px solid #f97316;
        }
        .brand {
            font-size: 9px;
            color: #fdba74;
            text-transform: uppercase;
            letter-spacing: 0.7px;
        }
        .title { font-size: 17px; margin: 3px 0 0; color: #f9fafb; }
        .subtitle { margin-top: 3px; color: #d1d5db; font-size: 9.5px; }
        .content { padding: 12px 14px 14px; }
        .stats {
            margin-bottom: 10px;
            padding: 8px 10px;
            border: 1px solid #e2e8f0;
            background: #f8fafc;
            font-size: 9.8px;
            color: #334155;
        }
        table { width: 100%; border-collapse: collapse; }
        th, td {
            border: 1px solid #e2e8f0;
            padding: 6px 7px;
            vertical-align: top;
        }
        th {
            background: #f1f5f9;
            color: #334155;
            font-weight: 700;
            text-align: left;
            font-size: 9.3px;
            text-transform: uppercase;
            letter-spacing: 0.25px;
        }
        tbody tr:nth-child(even) td { background: #fcfdff; }
        .cell-title { font-weight: 700; color: #0f172a; }
        .status {
            display: inline-block;
            padding: 2px 7px;
            border-radius: 10px;
            border: 1px solid transparent;
            font-size: 9px;
            font-weight: 700;
        }
        .status-open {
            color: #047857;
            background: #ecfdf5;
            border-color: #a7f3d0;
        }
        .status-closed {
            color: #9a3412;
            background: #fff7ed;
            border-color: #fed7aa;
        }
        .muted { color: #64748b; }
        .footer {
            margin-top: 10px;
            border-top: 1px solid #e2e8f0;
            padding-top: 7px;
            font-size: 9px;
            color: #64748b;
            text-align: right;
        }
    </style>
</head>
<body>
<div class="page">
    <div class="header">
        <div class="brand">NoVas Jobs - Backoffice</div>
        <h1 class="title">Admin Jobs Export Report</h1>
        <div class="subtitle">Consolidated list of all job offers</div>
    </div>
    <div class="content">
        <div class="stats">
            Total offers: <strong>{{ offres|length }}</strong> | Generated on <strong>{{ generatedAt|date('d/m/Y H:i') }}</strong>
        </div>
        <table>
            <thead>
            <tr>
                <th style="width: 4%">#</th>
                <th style="width: 21%">Title</th>
                <th style="width: 30%">Description</th>
                <th style="width: 10%">Category</th>
                <th style="width: 10%">Location</th>
                <th style="width: 10%">Status</th>
                <th style="width: 15%">Created At</th>
            </tr>
            </thead>
            <tbody>
            {% for offre in offres %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td class="cell-title">{{ offre.titreOffre ?: '-' }}</td>
                    <td>{{ offre.descriptionOffre ? offre.descriptionOffre|slice(0, 120) ~ (offre.descriptionOffre|length > 120 ? '...' : '') : '-' }}</td>
                    <td>{{ offre.categorieOffre ? offre.categorieOffre|replace({'_': ' '})|lower|title : '-' }}</td>
                    <td>{{ offre.lieu ? offre.lieu|replace({'_': ' '})|lower|title : '-' }}</td>
                    <td>
                        <span class="status {{ offre.statutOffre == 'FERMEE' ? 'status-closed' : 'status-open' }}">
                            {{ offre.statutOffre ? offre.statutOffre|lower|title : '-' }}
                        </span>
                    </td>
                    <td>{{ offre.dateCreationOffre ? offre.dateCreationOffre|date('d/m/Y H:i') : '-' }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="muted">No job offers found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="footer">
            NoVas Jobs | Generated at {{ generatedAt|date('d/m/Y H:i:s') }}
        </div>
    </div>
</div>
</body>
</html>

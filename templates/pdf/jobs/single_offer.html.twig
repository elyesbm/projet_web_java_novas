<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>NoVas Jobs - Offer #{{ offre.id }}</title>
    <style>
        @page { margin: 16mm; }
        body {
            margin: 0;
            font-family: DejaVu Sans, sans-serif;
            color: #1f2937;
            font-size: 11.5px;
            line-height: 1.45;
            background: #f8fafc;
        }
        .page {
            border: 1px solid #dbe3ee;
            background: #ffffff;
        }
        .topbar {
            background: #111827;
            color: #f9fafb;
            padding: 14px 18px 12px;
            border-bottom: 4px solid #f97316;
        }
        .topbar-left {
            float: left;
            font-size: 10px;
            letter-spacing: 0.7px;
            text-transform: uppercase;
            color: #fdba74;
        }
        .topbar-right {
            float: right;
            font-size: 9.5px;
            color: #d1d5db;
        }
        .clear { clear: both; }
        .content { padding: 18px 20px 20px; }
        .kicker {
            color: #64748b;
            font-size: 10px;
            text-transform: uppercase;
            letter-spacing: 0.7px;
            margin-bottom: 4px;
        }
        .title {
            font-size: 24px;
            margin: 0;
            color: #0f172a;
        }
        .subtitle {
            margin-top: 5px;
            color: #64748b;
            font-size: 10.5px;
            border-bottom: 1px solid #e2e8f0;
            padding-bottom: 10px;
        }
        .summary {
            margin-top: 12px;
            padding: 10px 12px;
            border: 1px solid #e2e8f0;
            background: #f8fafc;
        }
        .label {
            font-size: 9.5px;
            color: #64748b;
            text-transform: uppercase;
            letter-spacing: 0.4px;
        }
        .value {
            margin-top: 2px;
            font-size: 11px;
            color: #0f172a;
            font-weight: 600;
        }
        .meta-wrap {
            border: 1px solid #e2e8f0;
            margin: 12px 0 16px;
        }
        .meta { width: 100%; border-collapse: collapse; }
        .meta th {
            width: 150px;
            text-align: left;
            background: #f8fafc;
            color: #334155;
            border-bottom: 1px solid #e2e8f0;
            padding: 8px 10px;
            font-weight: 700;
            font-size: 10px;
            text-transform: uppercase;
            letter-spacing: 0.3px;
        }
        .meta td {
            border-bottom: 1px solid #e2e8f0;
            padding: 8px 10px;
            color: #1e293b;
        }
        .meta tr:last-child th,
        .meta tr:last-child td { border-bottom: none; }
        .badge {
            display: inline-block;
            padding: 2px 8px;
            font-size: 9.5px;
            border-radius: 12px;
            border: 1px solid transparent;
            font-weight: 700;
        }
        .badge-category { background: #eff6ff; color: #1d4ed8; border-color: #bfdbfe; }
        .badge-location { background: #f0fdf4; color: #166534; border-color: #bbf7d0; }
        .badge-open { background: #ecfdf5; color: #047857; border-color: #a7f3d0; }
        .badge-closed { background: #fff7ed; color: #9a3412; border-color: #fed7aa; }
        .section-title {
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin: 0 0 6px;
            color: #334155;
            font-weight: 700;
        }
        .description {
            line-height: 1.6;
            white-space: pre-line;
            border: 1px solid #e2e8f0;
            background: #fcfdff;
            padding: 11px 12px;
            min-height: 84px;
            color: #1f2937;
        }
        .footer {
            margin-top: 14px;
            border-top: 1px solid #e2e8f0;
            padding-top: 8px;
            font-size: 9.5px;
            color: #64748b;
            text-align: right;
        }
    </style>
</head>
<body>
<div class="page">
    <div class="topbar">
        <div class="topbar-left">NoVas Jobs - Official PDF Export</div>
        <div class="topbar-right">Generated {{ generatedAt|date('Y-m-d H:i') }}</div>
        <div class="clear"></div>
    </div>
    <div class="content">
        <div class="kicker">Job Offer Sheet</div>
        <h1 class="title">{{ offre.titreOffre ?: 'Untitled offer' }}</h1>
        <div class="subtitle">
            Offer ID #{{ offre.id }}{% if offre.createur and offre.createur.email %} | Published by {{ offre.createur.email }}{% endif %}
        </div>

        <div class="meta-wrap">
            <table class="meta">
                <tr>
                    <th>Category</th>
                    <td>
                        <span class="badge badge-category">{{ offre.categorieOffre ? offre.categorieOffre|replace({'_': ' '})|lower|title : '-' }}</span>
                    </td>
                </tr>
                <tr>
                    <th>Location</th>
                    <td>
                        <span class="badge badge-location">{{ offre.lieu ? offre.lieu|replace({'_': ' '})|lower|title : '-' }}</span>
                    </td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>
                        <span class="badge {{ offre.statutOffre == 'FERMEE' ? 'badge-closed' : 'badge-open' }}">{{ offre.statutOffre ? offre.statutOffre|lower|title : '-' }}</span>
                    </td>
                </tr>
                <tr>
                    <th>Created At</th>
                    <td>{{ offre.dateCreationOffre ? offre.dateCreationOffre|date('d/m/Y H:i') : '-' }}</td>
                </tr>
            </table>
        </div>

        <h2 class="section-title">Description</h2>
        <div class="description">{{ offre.descriptionOffre ?: 'No description provided for this offer.' }}</div>

        <div class="footer">
            Document generated on {{ generatedAt|date('d/m/Y \\a\\t H:i:s') }}
        </div>
    </div>
</div>
</body>
</html>

{% extends 'admin/base_admin.html.twig' %}

{% block title %}Emplois - NOVAS Admin{% endblock %}
{% block page_title %}Offres d'emploi{% endblock %}
{% block page_subtitle %}Gestion des offres et candidatures{% endblock %}

{% block body %}
<div class="space-y-6">

    {# Stats (simple, bas√© sur donn√©es) #}
    {% set totalOffres = offres|length %}
    {% set totalCands = 0 %}
    {% for o in offres %}
        {% set totalCands = totalCands + (o.candidatures|length) %}
    {% endfor %}

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white dark:bg-slate-800 rounded-2xl p-6 shadow-soft border border-slate-100 dark:border-slate-700 flex items-center gap-4">
            <div class="w-14 h-14 rounded-2xl bg-amber-100 dark:bg-amber-900/30 flex items-center justify-center text-amber-600">
                <i data-lucide="briefcase" class="w-7 h-7"></i>
            </div>
            <div>
                <p class="text-3xl font-bold text-slate-900 dark:text-white">{{ totalOffres }}</p>
                <p class="text-slate-500">Offres</p>
            </div>
        </div>

        <div class="bg-white dark:bg-slate-800 rounded-2xl p-6 shadow-soft border border-slate-100 dark:border-slate-700 flex items-center gap-4">
            <div class="w-14 h-14 rounded-2xl bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center text-primary-600">
                <i data-lucide="file-text" class="w-7 h-7"></i>
            </div>
            <div>
                <p class="text-3xl font-bold text-slate-900 dark:text-white">{{ totalCands }}</p>
                <p class="text-slate-500">Candidatures</p>
            </div>
        </div>

        <div class="bg-white dark:bg-slate-800 rounded-2xl p-6 shadow-soft border border-slate-100 dark:border-slate-700 flex items-center gap-4">
            <div class="w-14 h-14 rounded-2xl bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center text-emerald-600">
                <i data-lucide="check-circle" class="w-7 h-7"></i>
            </div>
            <div>
                {# si tu veux "pourvues" bas√© sur statut_offre = 'POURVUE' #}
                {% set fermees = 0 %}
                {% for o in offres %}
                    {% if o.statutOffre == 'FERMEE' %}
                        {% set fermees = fermees + 1 %}
                    {% endif %}
                {% endfor %}

                <p class="text-3xl font-bold text-slate-900 dark:text-white">{{ fermees }}</p>
                <p class="text-slate-500">Ferm√©es</p>
            </div>
        </div>
    </div>

    {# Tabs #}
    <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-soft border border-slate-100 dark:border-slate-700">
        <div class="border-b border-slate-200 dark:border-slate-700 px-6 flex items-center justify-between">
            <div class="flex gap-6">
                <button onclick="switchTab('offres')" id="tab-offres" class="py-4 text-sm font-semibold text-amber-600 border-b-2 border-amber-600">Offres</button>
                <button onclick="switchTab('candidatures')" id="tab-candidatures" class="py-4 text-sm font-semibold text-slate-500 hover:text-slate-700 dark:hover:text-slate-300">Candidatures</button>
            </div>

            <a href="{{ path('app_admin_jobs_new') }}" class="flex items-center gap-2 px-4 py-2 rounded-xl bg-amber-600 hover:bg-amber-700 text-white text-sm transition-colors shadow-lg shadow-amber-500/25">
                <i data-lucide="plus" class="w-4 h-4"></i>
                Nouvelle offre
            </a>
        </div>

        {# Offres Tab #}
        <div id="content-offres" class="p-6">
            <div class="space-y-4">

                {# optional: barre search/sort sans casser design #}
                <form method="get" action="{{ path('app_admin_jobs_list') }}" class="flex flex-col md:flex-row gap-3 mb-4">
                    <input
                        class="w-full md:w-1/2 px-4 py-2 rounded-xl border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 text-slate-900 dark:text-white"
                        type="text"
                        name="q"
                        value="{{ q|default('') }}"
                        placeholder="üîç Rechercher (titre, description, cat√©gorie, lieu...)"
                    >
                    <select name="sort" class="px-4 py-2 rounded-xl border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 text-slate-900 dark:text-white">
                        <option value="date" {{ sort|default('date') == 'date' ? 'selected' : '' }}>üìÖ Date</option>
                        <option value="titre" {{ sort|default('date') == 'titre' ? 'selected' : '' }}>üî§ Titre</option>
                        <option value="categorie" {{ sort|default('date') == 'categorie' ? 'selected' : '' }}>üè∑Ô∏è Cat√©gorie</option>
                        <option value="lieu" {{ sort|default('date') == 'lieu' ? 'selected' : '' }}>üìç Lieu</option>
                        <option value="statut" {{ sort|default('date') == 'statut' ? 'selected' : '' }}>‚úÖ Statut</option>
                    </select>
                    <select name="dir" class="px-4 py-2 rounded-xl border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 text-slate-900 dark:text-white">
                        <option value="desc" {{ dir|default('desc') == 'desc' ? 'selected' : '' }}>‚¨á Desc</option>
                        <option value="asc" {{ dir|default('desc') == 'asc' ? 'selected' : '' }}>‚¨Ü Asc</option>
                    </select>
                    <button class="px-4 py-2 rounded-xl bg-slate-900 text-white dark:bg-white dark:text-slate-900" type="submit">Filtrer</button>
                    <a class="px-4 py-2 rounded-xl bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-200 text-center" href="{{ path('app_admin_jobs_list') }}">Reset</a>
                </form>

                {% if offres is empty %}
                    <div class="bg-slate-50 dark:bg-slate-700/50 rounded-2xl p-6 border border-slate-100 dark:border-slate-700 text-slate-600 dark:text-slate-300">
                        Aucune offre pour le moment.
                    </div>
                {% else %}

                    {% for offre in offres %}
                        {# Card #}
                        <div class="bg-slate-50 dark:bg-slate-700/50 rounded-2xl p-6 border border-slate-100 dark:border-slate-700 hover-card">
                            <div class="flex flex-col lg:flex-row lg:items-start gap-6">
                                <div class="flex items-start gap-4 lg:w-1/4">
                                    <div class="w-12 h-12 rounded-xl bg-blue-100 dark:bg-blue-900/30 text-blue-600 flex items-center justify-center shrink-0">
                                        <i data-lucide="briefcase" class="w-6 h-6"></i>
                                    </div>
                                    <div>
                                        <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400 mb-2">
                                            {{ offre.categorieOffre }}
                                        </span>
                                        <p class="text-sm text-slate-500 flex items-center gap-1">
                                            <i data-lucide="map-pin" class="w-3 h-3"></i>{{ offre.lieu }}
                                        </p>
                                    </div>
                                </div>

                                <div class="flex-1">
                                    <h3 class="text-lg font-bold text-slate-900 dark:text-white mb-2">
                                        {{ offre.titreOffre }}
                                    </h3>
                                    <p class="text-slate-600 dark:text-slate-400 text-sm mb-3 line-clamp-2">
                                        {{ offre.descriptionOffre }}
                                    </p>
                                    <div class="flex items-center gap-4 text-sm text-slate-500">
                                        <span class="flex items-center gap-1">
                                            <i data-lucide="calendar" class="w-4 h-4"></i>
                                            {{ offre.dateCreationOffre ? offre.dateCreationOffre|date('Y-m-d') : '‚Äî' }}
                                        </span>
                                        <span class="flex items-center gap-1">
                                            <i data-lucide="badge-check" class="w-4 h-4"></i>
                                            {{ offre.statutOffre }}
                                        </span>
                                    </div>
                                </div>

                                <div class="flex flex-row lg:flex-col items-center lg:items-end gap-4">
                                    <div class="text-center lg:text-right">
                                        <p class="text-2xl font-bold text-slate-900 dark:text-white">{{ offre.candidatures|length }}</p>
                                        <p class="text-xs text-slate-500">candidatures</p>
                                    </div>

                                    <div class="flex items-center gap-2">
                                        <a href="{{ path('app_admin_jobs_candidatures', {id: offre.id}) }}"
                                           class="px-3 py-2 rounded-lg bg-amber-50 dark:bg-amber-900/20 text-amber-600 text-sm font-medium hover:bg-amber-100 dark:hover:bg-amber-900/30 transition-colors">
                                            Voir
                                        </a>

                                        <a href="{{ path('app_admin_jobs_edit', {id: offre.id}) }}"
                                           class="p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-700 text-slate-400 hover:text-blue-600">
                                            <i data-lucide="pencil" class="w-4 h-4"></i>
                                        </a>

                                        <form method="post" action="{{ path('app_admin_jobs_delete', {id: offre.id}) }}">
                                            <input type="hidden" name="_token" value="{{ csrf_token('admin_jobs_delete_' ~ offre.id) }}">
                                            <button type="submit"
                                                    class="p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-700 text-slate-400 hover:text-rose-600">
                                                <i data-lucide="trash-2" class="w-4 h-4"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>

        {# Candidatures Tab (hidden) #}
        <div id="content-candidatures" class="p-6 hidden">
            <div class="space-y-4">
                <div class="bg-slate-50 dark:bg-slate-700/50 rounded-2xl p-6 border border-slate-100 dark:border-slate-700 text-slate-600 dark:text-slate-300">
                    Ouvre une offre puis clique sur <b>Voir</b> pour g√©rer ses candidatures (accepter/refuser).
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
<script>
    function switchTab(tab) {
        document.getElementById('content-offres').classList.toggle('hidden', tab !== 'offres');
        document.getElementById('content-candidatures').classList.toggle('hidden', tab !== 'candidatures');
        document.getElementById('tab-offres').className = 'py-4 text-sm font-semibold ' + (tab === 'offres' ? 'text-amber-600 border-b-2 border-amber-600' : 'text-slate-500 hover:text-slate-700 dark:hover:text-slate-300');
        document.getElementById('tab-candidatures').className = 'py-4 text-sm font-semibold ' + (tab === 'candidatures' ? 'text-amber-600 border-b-2 border-amber-600' : 'text-slate-500 hover:text-slate-700 dark:hover:text-slate-300');
    }
</script>
{% endblock %}

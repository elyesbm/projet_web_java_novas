{% extends 'admin/base_admin.html.twig' %}

{% block title %}Marketplace - NOVAS Admin{% endblock %}
{% block page_title %}Marketplace{% endblock %}
{% block page_subtitle %}Gestion des articles et catégories{% endblock %}

{% block body %}
<div class="space-y-6">
    
    {% set statsTotalArticles = articles_total|default(0) %}
    {% set statsTotalCategories = categories|length %}
    {% set statsPalette = ['#ff3d6e', '#ff6f91', '#e56b3d', '#2ec4b6', '#60a5fa', '#f59e0b', '#a78bfa'] %}
    {% set donutStart = 0 %}
    {% set donutSlices = [] %}
    {% set categoryLegend = [] %}

    {% for stat in category_article_stats|default([]) %}
        {% set count = stat.article_count|default(0) %}
        {% set pct = statsTotalArticles > 0 ? ((count / statsTotalArticles) * 100) : 0 %}
        {% set donutEnd = donutStart + pct %}
        {% set color = statsPalette[loop.index0 % statsPalette|length] %}
        {% set donutSlices = donutSlices|merge([
            color ~ ' ' ~ donutStart|number_format(2, '.', '') ~ '% ' ~ donutEnd|number_format(2, '.', '') ~ '%'
        ]) %}
        {% set categoryLegend = categoryLegend|merge([
            {
                nom: stat.nom|default('Sans categorie'),
                count: count,
                color: color
            }
        ]) %}
        {% set donutStart = donutEnd %}
    {% endfor %}

    {% if donutSlices is empty %}
        {% set donutSlices = ['#1e293b 0% 100%'] %}
    {% endif %}

    <div class="space-y-4">
        <div class="grid grid-cols-1 xl:grid-cols-12 gap-3">
            <div class="xl:col-span-3 rounded-xl p-4 text-white bg-gradient-to-br from-pink-500 to-rose-600 shadow-lg shadow-pink-500/20 min-h-[120px]">
                <div class="text-2xl font-bold leading-none">{{ statsTotalArticles }}</div>
                <div class="mt-1.5 text-lg font-semibold">Articles totaux</div>
            </div>

            <div class="xl:col-span-3 rounded-xl p-4 text-white bg-gradient-to-br from-emerald-500 to-teal-600 shadow-lg shadow-emerald-500/20 min-h-[120px]">
                <div class="text-2xl font-bold leading-none">{{ statsTotalCategories }}</div>
                <div class="mt-1.5 text-lg font-semibold">Categories disponibles</div>
            </div>

            <div class="xl:col-span-6 rounded-xl p-4 text-white bg-gradient-to-br from-slate-800 via-slate-900 to-blue-950 shadow-lg shadow-slate-900/30 min-h-[120px]">
                <div class="text-xs tracking-wide uppercase text-slate-200 mb-2.5">Articles par categorie</div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3 items-center">
                    <div class="flex items-center justify-center">
                        <div class="relative w-32 h-32 rounded-full" style="background: conic-gradient({{ donutSlices|join(', ') }});">
                            <div class="absolute inset-2.5 rounded-full bg-slate-900/95 flex items-center justify-center">
                                <div class="text-center">
                                    <div class="text-slate-300 text-xs">Total</div>
                                    <div class="text-2xl font-bold leading-none">{{ statsTotalArticles }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="space-y-2">
                            {% for item in categoryLegend %}
                                <div class="flex items-center justify-between gap-3 text-sm">
                                    <div class="flex items-center gap-3 min-w-0">
                                        <span class="w-2.5 h-2.5 rounded-full shrink-0" style="background-color: {{ item.color }};"></span>
                                        <span class="truncate text-slate-100">{{ item.nom }}</span>
                                    </div>
                                    <span class="font-semibold text-slate-100">{{ item.count }}</span>
                                </div>
                            {% else %}
                                <div class="text-sm text-slate-300">Aucune categorie.</div>
                            {% endfor %}
                        </div>
                        <div class="mt-3 pt-3 border-t border-slate-700/70 space-y-1.5 text-sm">
                            <div class="flex items-center justify-between">
                                <span class="text-slate-200">Categorie la plus remplie</span>
                                <span class="font-semibold text-pink-300">
                                    {% if category_most_filled %}
                                        {{ category_most_filled.nom }} ({{ category_most_filled.article_count }})
                                    {% else %}
                                        -
                                    {% endif %}
                                </span>
                            </div>
                            <div class="flex items-center justify-between">
                                <span class="text-slate-200">Categories vides</span>
                                <span class="font-semibold text-slate-100">{{ category_empty_count|default(0) }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="rounded-xl p-4 text-white bg-gradient-to-br from-indigo-800 via-indigo-900 to-slate-900 shadow-lg shadow-indigo-900/30">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-2">
                <div class="text-sm uppercase tracking-wide text-indigo-200">Articles les plus populaires</div>
                <div class="text-sm text-indigo-100">Base: nombre de vues sur la page detail produit</div>
            </div>

            <div class="mt-1.5 text-lg font-semibold text-white">
                {% if most_popular_article %}
                    Produit le plus clique:
                    <span class="text-pink-300">{{ most_popular_article.titre }}</span>
                    <span class="text-indigo-200">({{ most_popular_article.vues }} vues)</span>
                {% else %}
                    Aucun article populaire pour le moment.
                {% endif %}
            </div>

            <div class="mt-3 grid grid-cols-1 md:grid-cols-2 xl:grid-cols-5 gap-2.5">
                {% for popular in popular_articles|default([]) %}
                    <div class="rounded-lg border border-white/15 bg-white/10 p-3">
                        <div class="text-sm text-indigo-100 truncate">{{ popular.categorie }}</div>
                        <div class="mt-1 text-base font-semibold text-white line-clamp-2">{{ popular.titre }}</div>
                        <div class="mt-1.5 text-sm font-semibold text-pink-300">{{ popular.vues }} vues</div>
                    </div>
                {% else %}
                    <div class="text-sm text-indigo-100">Aucune vue enregistree.</div>
                {% endfor %}
            </div>
        </div>
    </div>

    {# Tabs #}
    <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-soft border border-slate-100 dark:border-slate-700">
        <div class="border-b border-slate-200 dark:border-slate-700 px-6">
            <div class="flex gap-6">
                <button onclick="switchTab('articles')" id="tab-articles" class="py-4 text-sm font-semibold text-rose-600 border-b-2 border-rose-600">Articles</button>
                <button onclick="switchTab('categories')" id="tab-categories" class="py-4 text-sm font-semibold text-slate-500 hover:text-slate-700 dark:hover:text-slate-300">Catégories</button>
            </div>
        </div>

        {# Articles Tab #}
        <div id="content-articles" class="p-6">
            <form method="get" class="mb-6 space-y-4">
                <input type="hidden" name="tab" value="articles">

                <div class="grid grid-cols-1 xl:grid-cols-12 gap-3">
                    <div class="xl:col-span-4 relative">
                        <i data-lucide="search" class="w-5 h-5 absolute left-4 top-1/2 -translate-y-1/2 text-slate-400"></i>
                        <input
                            type="text"
                            name="q"
                            value="{{ app.request.query.get('q') }}"
                            placeholder="ID ou titre..."
                            class="w-full h-12 pl-12 pr-4 rounded-2xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-sm focus:ring-2 focus:ring-rose-500"
                        >
                    </div>

                    <div class="xl:col-span-2">
                        <select name="statut" class="w-full h-12 px-4 rounded-2xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-sm">
                            {% set currentStatut = app.request.query.get('statut') %}
                            <option value="">Tous les statuts</option>
                            <option value="disponible" {{ currentStatut == 'disponible' ? 'selected' }}>Disponible</option>
                            <option value="reserve" {{ currentStatut == 'reserve' ? 'selected' }}>Reserve</option>
                            <option value="vendu" {{ currentStatut == 'vendu' ? 'selected' }}>Vendu</option>
                        </select>
                    </div>

                    <div class="xl:col-span-2">
                        <select name="type" class="w-full h-12 px-4 rounded-2xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-sm">
                            {% set currentType = app.request.query.get('type') %}
                            <option value="">Tous les types</option>
                            <option value="academic" {{ currentType == 'academic' ? 'selected' }}>Academic</option>
                            <option value="commercial" {{ currentType == 'commercial' ? 'selected' }}>Personnel</option>
                        </select>
                    </div>

                    <div class="xl:col-span-2">
                        <select name="categorie" class="w-full h-12 px-4 rounded-2xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-sm">
                            {% set currentCat = app.request.query.get('categorie') %}
                            <option value="">Toutes categories</option>
                            {% if categories is defined %}
                                {% for cat in categories %}
                                    {% set catId = cat.idCategorie ?? cat.id %}
                                    <option value="{{ catId }}" {{ currentCat is not null and currentCat == catId ? 'selected' : '' }}>
                                        {{ cat.nomCategorie }}
                                    </option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>

                    <div class="xl:col-span-2">
                        <select name="sort" class="w-full h-12 px-4 rounded-2xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-sm">
                            {% set currentSort = app.request.query.get('sort', 'date_desc') %}
                            <option value="date_desc" {{ currentSort == 'date_desc' ? 'selected' }}>Plus recents</option>
                            <option value="date_asc" {{ currentSort == 'date_asc' ? 'selected' }}>Plus anciens</option>
                            <option value="price_asc" {{ currentSort == 'price_asc' ? 'selected' }}>Prix croissant</option>
                            <option value="price_desc" {{ currentSort == 'price_desc' ? 'selected' }}>Prix decroissant</option>
                        </select>
                    </div>
                </div>

                <div class="flex flex-wrap items-center gap-3">
                    <button type="submit" class="h-12 px-6 rounded-2xl bg-slate-800 dark:bg-slate-100 text-white dark:text-slate-900 text-sm font-semibold hover:bg-slate-900 dark:hover:bg-white transition-colors">
                        Filtrer
                    </button>

                    <button type="button" data-ai-analyze-open class="h-12 px-6 rounded-2xl border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 text-slate-700 dark:text-slate-200 text-sm font-medium inline-flex items-center gap-2 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
                        <i data-lucide="sparkles" class="w-4 h-4"></i>
                        Analyser avec IA
                    </button>

                    <a href="{{ path('app_admin_marketplace_export_pdf') }}" class="h-12 px-6 rounded-2xl border border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 text-slate-700 dark:text-slate-200 text-sm font-medium inline-flex items-center gap-2 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
                        <i data-lucide="file-down" class="w-4 h-4"></i>
                        Exporter PDF
                    </a>

                    <a href="{{ path('app_admin_marketplace_new') }}" class="h-12 px-7 rounded-2xl bg-rose-600 hover:bg-rose-700 text-white text-sm font-semibold inline-flex items-center gap-2 transition-colors shadow-lg shadow-rose-500/25">
                        <i data-lucide="plus" class="w-4 h-4"></i>
                        Ajouter un article
                    </a>
                </div>
            </form>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                {% for article in articles %}
                    <div class="bg-slate-50 dark:bg-slate-700/50 rounded-2xl overflow-hidden hover-card border border-slate-100 dark:border-slate-700 group">
                        <div class="aspect-[4/3] bg-slate-200 dark:bg-slate-600 relative overflow-hidden">
                            {% set img = article.imageArticle ?: '' %}
                            {% if img %}
                                <img
                                    src="{{ asset('images/' ~ img) }}"
                                    alt="Image article"
                                    class="absolute inset-0 w-full h-full object-cover"
                                    onerror="this.style.display='none';"
                                >
                            {% endif %}
                            <div class="absolute inset-0 flex items-center justify-center text-slate-400">
                                <i data-lucide="image" class="w-12 h-12"></i>
                            </div>
                            <div class="absolute top-3 right-3">
                                <span class="px-2 py-1 rounded-lg text-xs font-medium {{ article.statutArticle == 'disponible' ? 'bg-emerald-500' : 'bg-slate-500' }} text-white">
                                    {{ article.statutArticle|capitalize }}
                                </span>
                            </div>
                        </div>
                        <div class="p-4">
                            <div class="flex items-start justify-between mb-2">
                                <span class="text-xs text-slate-500">
                                    {{ article.categorie ? article.categorie.nomCategorie : 'Sans catégorie' }}
                                </span>
                                <span class="text-lg font-bold text-rose-600">
                                    {{ article.prixArticle is not null ? (article.prixArticle|number_format(2, ',', ' ')) ~ ' €' : '-- €' }}
                                </span>
                            </div>
                            <h3 class="font-semibold text-slate-900 dark:text-white mb-2 line-clamp-2">
                                {{ article.titreArticle }}
                            </h3>
                            <p class="text-sm text-slate-500 mb-3 line-clamp-2">
                                {{ article.contenueArticle }}
                            </p>
                            <div class="flex gap-2">
                                <a href="{{ path('app_admin_marketplace_edit', {id: article.id}) }}" class="flex-1 py-2 rounded-lg border border-slate-200 dark:border-slate-600 text-center text-sm font-medium hover:bg-slate-100 dark:hover:bg-slate-600 transition-colors">
                                    Modifier
                                </a>
                                <form method="post" action="{{ path('app_admin_marketplace_delete', {id: article.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_article_' ~ article.id) }}">
                                    <button type="submit" class="px-3 py-2 rounded-lg border border-rose-200 dark:border-rose-800 text-rose-600 hover:bg-rose-50 dark:hover:bg-rose-900/20 transition-colors">
                                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p class="text-sm text-slate-500">Aucun article pour le moment.</p>
                {% endfor %}
            </div>
            {% if total_pages is defined and total_pages > 1 %}
                <div class="mt-6 flex items-center justify-center gap-3">
                    {% set prevPage = current_page > 1 ? current_page - 1 : 1 %}
                    <a href="{{ path('app_admin_marketplace_list', app.request.query.all|merge({'tab':'articles','page': prevPage})) }}" class="h-12 w-12 inline-flex items-center justify-center rounded-2xl border border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-900 text-slate-700 dark:text-slate-200 text-xl {{ current_page == 1 ? 'pointer-events-none opacity-40' : 'hover:border-rose-400 hover:text-rose-600' }}">&lsaquo;</a>
                    {% for p in 1..total_pages %}
                        <a href="{{ path('app_admin_marketplace_list', app.request.query.all|merge({'tab':'articles','page': p})) }}" class="h-12 w-12 inline-flex items-center justify-center rounded-2xl border text-xl font-semibold {{ p == current_page ? 'border-rose-500 bg-rose-500 text-white' : 'border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-900 text-slate-700 dark:text-slate-200 hover:border-rose-400 hover:text-rose-600' }}">{{ p }}</a>
                    {% endfor %}
                    {% set nextPage = current_page < total_pages ? current_page + 1 : total_pages %}
                    <a href="{{ path('app_admin_marketplace_list', app.request.query.all|merge({'tab':'articles','page': nextPage})) }}" class="h-12 w-12 inline-flex items-center justify-center rounded-2xl border border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-900 text-slate-700 dark:text-slate-200 text-xl {{ current_page == total_pages ? 'pointer-events-none opacity-40' : 'hover:border-rose-400 hover:text-rose-600' }}">&rsaquo;</a>
                </div>
            {% endif %}
        </div>

        {# Categories Tab #}
        <div id="content-categories" class="p-6 hidden">
            <form method="get" class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-6">
                <input type="hidden" name="tab" value="categories">
                <div class="flex-1 flex flex-col md:flex-row md:items-center md:gap-3">
                    <div class="w-full md:flex-1 relative mb-3 md:mb-0">
                        <i data-lucide="search" class="w-5 h-5 absolute left-3 top-1/2 -translate-y-1/2 text-slate-400"></i>
                        <input
                            type="text"
                            name="q_cat"
                            value="{{ app.request.query.get('q_cat') }}"
                            placeholder="Rechercher une catégorie (ID ou nom)..."
                            class="w-full pl-10 pr-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 focus:ring-2 focus:ring-rose-500"
                        >
                    </div>
                    <div class="w-full md:w-56">
                        <select name="sort_cat" class="w-full px-3 py-2.5 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-sm">
                            {% set currentSortCat = app.request.query.get('sort_cat', 'date_desc') %}
                            <option value="date_desc" {{ currentSortCat == 'date_desc' ? 'selected' }}>Plus récentes</option>
                            <option value="date_asc" {{ currentSortCat == 'date_asc' ? 'selected' }}>Plus anciennes</option>
                            <option value="name_asc" {{ currentSortCat == 'name_asc' ? 'selected' }}>Nom A → Z</option>
                            <option value="name_desc" {{ currentSortCat == 'name_desc' ? 'selected' }}>Nom Z → A</option>
                        </select>
                    </div>
                </div>
                <div class="flex items-center gap-3">
                    <button type="submit" class="px-4 py-2.5 rounded-xl bg-slate-800 dark:bg-slate-100 text-white dark:text-slate-900 text-sm font-semibold hover:bg-slate-900 dark:hover:bg-white transition-colors">
                        Filtrer
                    </button>
                    <a href="{{ path('app_admin_marketplace_categorie_new') }}" class="flex items-center gap-2 px-4 py-2.5 rounded-xl bg-rose-600 hover:bg-rose-700 text-white transition-colors shadow-lg shadow-rose-500/25">
                        <i data-lucide="plus" class="w-4 h-4"></i>
                        Nouvelle catégorie
                    </a>
                </div>
            </form>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                {% for cat in categories_list %}
                    <div class="p-4 rounded-xl bg-slate-50 dark:bg-slate-700/50 border border-slate-100 dark:border-slate-700 flex flex-col gap-3">
                        <div class="flex items-start gap-3">
                            <div class="w-10 h-10 rounded-xl bg-white dark:bg-slate-800 flex items-center justify-center shadow-sm">
                                <i data-lucide="book" class="w-5 h-5 text-rose-600"></i>
                            </div>
                            <div class="flex-1">
                                <h4 class="font-semibold text-slate-900 dark:text-white">
                                    {{ cat.nomCategorie }}
                                </h4>
                                <p class="text-xs text-slate-500">
                                    {{ cat.descriptionCategorie ?: 'Aucune description' }}
                                </p>
                            </div>
                        </div>
                        <div class="flex items-center justify-between text-xs text-slate-500">
                            <span>ID: {{ cat.id }}</span>
                            <span>{{ cat.articles|length }} article(s)</span>
                        </div>
                        <div class="flex gap-2 pt-1">
                            <a href="{{ path('app_admin_marketplace_categorie_edit', {id: cat.id}) }}" class="flex-1 py-2 rounded-lg border border-slate-200 dark:border-slate-600 text-center text-sm font-medium hover:bg-slate-100 dark:hover:bg-slate-600 transition-colors">
                                Modifier
                            </a>
                            <form method="post" action="{{ path('app_admin_marketplace_categorie_delete', {id: cat.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_categorie_' ~ cat.id) }}">
                                <button type="submit" class="px-3 py-2 rounded-lg border border-rose-200 dark:border-rose-800 text-rose-600 hover:bg-rose-50 dark:hover:bg-rose-900/20 transition-colors">
                                    <i data-lucide="trash-2" class="w-4 h-4"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                {% else %}
                    <p class="text-sm text-slate-500">Aucune catégorie pour le moment.</p>
                {% endfor %}
            </div>
            {% if total_pages_cat is defined and total_pages_cat > 1 %}
                <div class="mt-6 flex items-center justify-center gap-3">
                    {% set prevPageCat = current_page_cat > 1 ? current_page_cat - 1 : 1 %}
                    <a href="{{ path('app_admin_marketplace_list', app.request.query.all|merge({'tab':'categories','page_cat': prevPageCat})) }}" class="h-12 w-12 inline-flex items-center justify-center rounded-2xl border border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-900 text-slate-700 dark:text-slate-200 text-xl {{ current_page_cat == 1 ? 'pointer-events-none opacity-40' : 'hover:border-rose-400 hover:text-rose-600' }}">&lsaquo;</a>
                    {% for p in 1..total_pages_cat %}
                        <a href="{{ path('app_admin_marketplace_list', app.request.query.all|merge({'tab':'categories','page_cat': p})) }}" class="h-12 w-12 inline-flex items-center justify-center rounded-2xl border text-xl font-semibold {{ p == current_page_cat ? 'border-rose-500 bg-rose-500 text-white' : 'border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-900 text-slate-700 dark:text-slate-200 hover:border-rose-400 hover:text-rose-600' }}">{{ p }}</a>
                    {% endfor %}
                    {% set nextPageCat = current_page_cat < total_pages_cat ? current_page_cat + 1 : total_pages_cat %}
                    <a href="{{ path('app_admin_marketplace_list', app.request.query.all|merge({'tab':'categories','page_cat': nextPageCat})) }}" class="h-12 w-12 inline-flex items-center justify-center rounded-2xl border border-slate-300 dark:border-slate-700 bg-white dark:bg-slate-900 text-slate-700 dark:text-slate-200 text-xl {{ current_page_cat == total_pages_cat ? 'pointer-events-none opacity-40' : 'hover:border-rose-400 hover:text-rose-600' }}">&rsaquo;</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<div id="ai-analyze-modal" class="fixed inset-0 z-[80] hidden items-center justify-center bg-black/50 p-4">
    <div class="w-full max-w-2xl rounded-2xl bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-700 p-6 shadow-2xl">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold text-slate-900 dark:text-white">Analyser avec IA</h2>
            <button type="button" data-ai-analyze-close class="w-9 h-9 rounded-lg border border-slate-200 dark:border-slate-700">X</button>
        </div>

        <form id="ai-analyze-form" class="space-y-4">
            <input type="hidden" name="_token" value="{{ csrf_token('marketplace_ai_analyze') }}">
            <div>
                <label for="ai-product-name" class="block text-sm mb-2 text-slate-700 dark:text-slate-200">Nom du produit</label>
                <input id="ai-product-name" name="product_name" required class="h-11 w-full rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-800 px-3 text-sm focus:outline-none focus:ring-2 focus:ring-rose-500" />
            </div>
            <div>

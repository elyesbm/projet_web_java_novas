<script>
    function switchTab(tab) {
        document.getElementById('content-articles').classList.toggle('hidden', tab !== 'articles');
        document.getElementById('content-categories').classList.toggle('hidden', tab !== 'categories');
        document.getElementById('tab-articles').className = 'py-4 text-sm font-semibold ' + (tab === 'articles' ? 'text-rose-600 border-b-2 border-rose-600' : 'text-slate-500 hover:text-slate-700 dark:hover:text-slate-300');
        document.getElementById('tab-categories').className = 'py-4 text-sm font-semibold ' + (tab === 'categories' ? 'text-rose-600 border-b-2 border-rose-600' : 'text-slate-500 hover:text-slate-700 dark:hover:text-slate-300');
    }

    (function () {
        const params = new URLSearchParams(window.location.search);
        if (params.get('tab') === 'categories') {
            switchTab('categories');
        }
    })();

    (function () {
        const modal = document.getElementById('ai-analyze-modal');
        const form = document.getElementById('ai-analyze-form');
        if (!modal || !form) return;

        const errorBox = document.getElementById('ai-analyze-error');
        const resultBox = document.getElementById('ai-analyze-result');
        const submitBtn = document.getElementById('ai-analyze-submit');
        const price = document.getElementById('ai-price');
        const reviews = document.getElementById('ai-reviews');
        const demand = document.getElementById('ai-demand');
        const why = document.getElementById('ai-why');

        function openModal() {
            modal.classList.remove('hidden');
            modal.classList.add('flex');
        }

        function closeModal() {
            modal.classList.add('hidden');
            modal.classList.remove('flex');
        }

        function clearMessages() {
            errorBox.classList.add('hidden');
            errorBox.textContent = '';
            resultBox.classList.add('hidden');
        }

        function setError(message) {
            errorBox.textContent = message || 'Erreur inattendue.';
            errorBox.classList.remove('hidden');
        }

        document.querySelectorAll('[data-ai-analyze-open]').forEach((el) => {
            el.addEventListener('click', openModal);
        });

        document.querySelectorAll('[data-ai-analyze-close]').forEach((el) => {
            el.addEventListener('click', closeModal);
        });

        modal.addEventListener('click', (e) => {
            if (e.target === modal) closeModal();
        });

        form.addEventListener('submit', async function (e) {
            e.preventDefault();
            clearMessages();
            submitBtn.disabled = true;
            submitBtn.textContent = 'Analyse...';

            const formData = new FormData(form);
            const payload = {
                _token: formData.get('_token'),
                product_name: formData.get('product_name'),
                product_url: formData.get('product_url')
            };

            try {
                const response = await fetch('{{ path('app_marketplace_ai_analyze') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify(payload)
                });

                const data = await response.json().catch(() => ({}));
                if (!response.ok) {
                    throw new Error(data.error || 'Analyse impossible');
                }

                price.textContent = data.recommended_price || 'N/A';
                reviews.textContent = data.reviews_quality || 'Moyenne';
                demand.textContent = data.demand_score ?? '0';
                why.textContent = data.justification || '';
                resultBox.classList.remove('hidden');
            } catch (err) {
                setError(err.message || 'Erreur inattendue.');
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Analyser';
            }
        });
    })();
</script>

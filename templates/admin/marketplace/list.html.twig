{% extends 'admin/base_admin.html.twig' %}

{% block title %}Marketplace - NOVAS Admin{% endblock %}
{% block page_title %}Marketplace{% endblock %}
{% block page_subtitle %}Gestion des articles et catégories{% endblock %}

{% block body %}
<div class="space-y-6">
    
    {# Stats dynamiques simples #}
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="bg-gradient-to-br from-rose-500 to-pink-600 rounded-xl p-6 text-white">
            <p class="text-3xl font-bold">{{ articles_total|default(articles|length) }}</p>
            <p class="text-rose-100">Articles totaux</p>
        </div>
        <div class="bg-gradient-to-br from-emerald-500 to-teal-600 rounded-xl p-6 text-white">
            <p class="text-3xl font-bold">{{ categories_total|default(categories_list|length) }}</p>
            <p class="text-emerald-100">Categories disponibles</p>
        </div>
        <div class="md:col-span-2 bg-gradient-to-br from-slate-800 to-slate-900 rounded-xl p-6 text-white">
            <p class="text-xs uppercase tracking-wide text-slate-300 mb-4">Articles par categorie</p>
            {% set chartStats = (category_article_stats|default([])|slice(0, 5)) %}
            {% set chartTotal = 0 %}
            {% for s in chartStats %}
                {% set chartTotal = chartTotal + s.article_count %}
            {% endfor %}
            {% set colors = ['#f43f5e', '#fb7185', '#c75b39', '#14b8a6', '#38bdf8'] %}
            {% set gradientParts = [] %}
            {% set start = 0 %}
            {% if chartTotal > 0 %}
                {% for s in chartStats %}
                    {% set pct = (s.article_count / chartTotal) * 100 %}
                    {% set color = colors[loop.index0 % colors|length] %}
                    {% set end = start + pct %}
                    {% set gradientParts = gradientParts|merge([color ~ ' ' ~ start ~ '% ' ~ end ~ '%']) %}
                    {% set start = end %}
                {% endfor %}
            {% endif %}

            <div class="flex flex-col md:flex-row items-center gap-6">
                <div class="relative">
                    <div class="w-40 h-40 rounded-full border border-white/10"
                         style="background: {{ chartTotal > 0 ? 'conic-gradient(' ~ (gradientParts|join(', ')) ~ ')' : '#334155' }};">
                    </div>
                    <div class="absolute inset-4 rounded-full bg-slate-900/95 border border-white/10 flex flex-col items-center justify-center">
                        <span class="text-xs text-slate-400">Total</span>
                        <span class="text-xl font-bold">{{ chartTotal }}</span>
                    </div>
                </div>

                <div class="flex-1 w-full space-y-2">
                    {% for s in chartStats %}
                        {% set color = colors[loop.index0 % colors|length] %}
                        <div class="flex items-center justify-between text-sm">
                            <div class="flex items-center gap-2 min-w-0">
                                <span class="w-3 h-3 rounded-full" style="background-color: {{ color }}"></span>
                                <span class="text-slate-200 truncate">{{ s.nom }}</span>
                            </div>
                            <span class="text-slate-300 font-semibold">{{ s.article_count }}</span>
                        </div>
                    {% else %}
                        <p class="text-sm text-slate-400">Aucune donnee</p>
                    {% endfor %}

                    <div class="pt-2 border-t border-white/10 flex items-center justify-between text-sm">
                        <span class="text-slate-300">Categorie la plus remplie</span>
                        <span class="text-rose-300 font-semibold">
                            {{ category_most_filled ? category_most_filled.nom ~ ' (' ~ category_most_filled.article_count ~ ')' : 'Aucune' }}
                        </span>
                    </div>
                    <div class="flex items-center justify-between text-sm">
                        <span class="text-slate-300">Categories vides</span>
                        <span class="text-slate-100 font-semibold">{{ category_empty_count|default(0) }}</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="md:col-span-4 bg-gradient-to-br from-indigo-900 to-slate-900 rounded-xl p-6 text-white border border-indigo-700/40">
            <div class="flex items-start justify-between gap-6">
                <div>
                    <p class="text-xs uppercase tracking-wide text-indigo-200">Articles les plus populaires</p>
                    <p class="text-lg font-semibold mt-1">
                        Produit le plus clique:
                        <span class="text-rose-300">
                            {{ most_popular_article ? most_popular_article.titre : 'Aucun' }}
                        </span>
                        <span class="text-indigo-200">({{ most_popular_article ? most_popular_article.vues : 0 }} vues)</span>
                    </p>
                </div>
                <div class="text-right text-sm text-indigo-200">
                    Base: nombre de vues sur la page detail produit
                </div>
            </div>

            <div class="mt-4 grid grid-cols-1 md:grid-cols-5 gap-3">
                {% for p in (popular_articles|default([])|slice(0, 5)) %}
                    <div class="rounded-xl bg-white/10 border border-white/10 p-3">
                        <p class="text-xs text-indigo-200 truncate">{{ p.categorie }}</p>
                        <p class="text-sm font-semibold mt-1 truncate">{{ p.titre }}</p>
                        <p class="text-xs text-rose-300 mt-1">{{ p.vues }} vues</p>
                    </div>
                {% else %}
                    <p class="text-sm text-indigo-200">Aucune vue enregistree pour le moment.</p>
                {% endfor %}
            </div>
        </div>
    </div>

    {# Tabs #}
    <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-soft border border-slate-100 dark:border-slate-700">
        <div class="border-b border-slate-200 dark:border-slate-700 px-6">
            <div class="flex gap-6">
                <button onclick="switchTab('articles')" id="tab-articles" class="py-4 text-sm font-semibold text-rose-600 border-b-2 border-rose-600">Articles</button>
                <button onclick="switchTab('categories')" id="tab-categories" class="py-4 text-sm font-semibold text-slate-500 hover:text-slate-700 dark:hover:text-slate-300">Catégories</button>
            </div>
        </div>

        {# Articles Tab #}
        <div id="content-articles" class="p-6">
            <form method="get" class="mb-6">
                <input type="hidden" name="tab" value="articles">
                <div class="flex-1 flex flex-col md:flex-row md:items-center md:gap-3">
                    <div class="w-full md:flex-1 relative mb-3 md:mb-0">
                        <i data-lucide="search" class="w-5 h-5 absolute left-3 top-1/2 -translate-y-1/2 text-slate-400"></i>
                        <input
                            type="text"
                            name="q"
                            value="{{ app.request.query.get('q') }}"
                            placeholder="ID ou titre..."
                            class="w-full pl-10 pr-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 focus:ring-2 focus:ring-rose-500"
                        >
                    </div>
                    <div class="w-full md:w-40">
                        <select name="statut" class="w-full px-3 py-2.5 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-sm">
                            {% set currentStatut = app.request.query.get('statut') %}
                            <option value="">Tous les statuts</option>
                            <option value="disponible" {{ currentStatut == 'disponible' ? 'selected' }}>Disponible</option>
                            <option value="reserve" {{ currentStatut == 'reserve' ? 'selected' }}>Réservé</option>
                            <option value="vendu" {{ currentStatut == 'vendu' ? 'selected' }}>Vendu</option>
                        </select>
                    </div>
                    <div class="w-full md:w-40">
                        <select name="type" class="w-full px-3 py-2.5 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-sm">
                            {% set currentType = app.request.query.get('type') %}
                            <option value="">Tous les types</option>
                            <option value="academic" {{ currentType == 'academic' ? 'selected' }}>Academic</option>
                            {# on garde la valeur "commercial" pour la base, mais on affiche "Personnel" #}
                            <option value="commercial" {{ currentType == 'commercial' ? 'selected' }}>Personnel</option>
                        </select>
                    </div>
                    <div class="w-full md:w-48">
                        <select name="categorie" class="w-full px-3 py-2.5 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-sm">
                            {% set currentCat = app.request.query.get('categorie') %}
                            <option value="">Toutes catégories</option>
                            {% if categories is defined %}
                                {% for cat in categories %}
                                    {% set catId = cat.idCategorie ?? cat.id %}
                                    <option value="{{ catId }}" {{ currentCat is not null and currentCat == catId ? 'selected' : '' }}>
                                        {{ cat.nomCategorie }}
                                    </option>
                                {% endfor %}
                            {% endif %}
                        </select>
                    </div>
                    <div class="w-full md:w-44 mt-3 md:mt-0">
                        <select name="sort" class="w-full px-3 py-2.5 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-sm">
                        {% set currentSort = app.request.query.get('sort', 'date_desc') %}
                        <option value="date_desc" {{ currentSort == 'date_desc' ? 'selected' }}>Plus récents</option>
                        <option value="date_asc" {{ currentSort == 'date_asc' ? 'selected' }}>Plus anciens</option>
                        <option value="price_asc" {{ currentSort == 'price_asc' ? 'selected' }}>Prix croissant</option>
                        <option value="price_desc" {{ currentSort == 'price_desc' ? 'selected' }}>Prix décroissant</option>
                    </select>
                    </div>
                </div>
                <div class="mt-4 flex flex-wrap items-center gap-3">
                    <button type="submit" class="px-4 py-2.5 rounded-xl bg-slate-800 dark:bg-slate-100 text-white dark:text-slate-900 text-sm font-semibold hover:bg-slate-900 dark:hover:bg-white transition-colors">
                        Filtrer
                    </button>
                    <button type="button" data-ai-analyze-open class="flex items-center gap-2 px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-700 dark:text-slate-100 hover:bg-slate-50 dark:hover:bg-slate-600 transition-colors">
                        <i data-lucide="sparkles" class="w-4 h-4"></i>
                        Analyser avec IA
                    </button>
                    <a href="{{ path('app_admin_marketplace_export_pdf') }}" class="flex items-center gap-2 px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-700 dark:text-slate-100 hover:bg-slate-50 dark:hover:bg-slate-600 transition-colors">
                        <i data-lucide="file-down" class="w-4 h-4"></i>
                        Exporter PDF
                    </a>
                    <a href="{{ path('app_admin_marketplace_new') }}" class="flex items-center gap-2 px-4 py-2.5 rounded-xl bg-rose-600 hover:bg-rose-700 text-white transition-colors shadow-lg shadow-rose-500/25">
                        <i data-lucide="plus" class="w-4 h-4"></i>
                        Ajouter un article
                    </a>
                </div>
            </form>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                {% for article in articles %}
                    <div class="bg-slate-50 dark:bg-slate-700/50 rounded-2xl overflow-hidden hover-card border border-slate-100 dark:border-slate-700 group">
                        <div class="aspect-[4/3] bg-slate-200 dark:bg-slate-600 relative overflow-hidden">
                            {% set img = article.imageArticle ?: '' %}
                            {% if img %}
                                <img
                                    src="{{ asset('images/' ~ img) }}"
                                    alt="Image article"
                                    class="absolute inset-0 w-full h-full object-cover"
                                    onerror="this.style.display='none';"
                                >
                            {% endif %}
                            <div class="absolute inset-0 flex items-center justify-center text-slate-400">
                                <i data-lucide="image" class="w-12 h-12"></i>
                            </div>
                            <div class="absolute top-3 right-3">
                                <span class="px-2 py-1 rounded-lg text-xs font-medium {{ article.statutArticle == 'disponible' ? 'bg-emerald-500' : 'bg-slate-500' }} text-white">
                                    {{ article.statutArticle|capitalize }}
                                </span>
                            </div>
                        </div>
                        <div class="p-4">
                            <div class="flex items-start justify-between mb-2">
                                <span class="text-xs text-slate-500">
                                    {{ article.categorie ? article.categorie.nomCategorie : 'Sans catégorie' }}
                                </span>
                                <span class="text-lg font-bold text-rose-600">
                                    {{ article.prixArticle is not null ? (article.prixArticle|number_format(2, ',', ' ')) ~ ' DT' : '-- DT' }}
                                </span>
                            </div>
                            <h3 class="font-semibold text-slate-900 dark:text-white mb-2 line-clamp-2">
                                {{ article.titreArticle }}
                            </h3>
                            <p class="text-sm text-slate-500 mb-3 line-clamp-2">
                                {{ article.contenueArticle }}
                            </p>
                            <div class="flex gap-2">
                                <a href="{{ path('app_admin_marketplace_edit', {id: article.id}) }}" class="flex-1 py-2 rounded-lg border border-slate-200 dark:border-slate-600 text-center text-sm font-medium hover:bg-slate-100 dark:hover:bg-slate-600 transition-colors">
                                    Modifier
                                </a>
                                <form method="post" action="{{ path('app_admin_marketplace_delete', {id: article.id}) }}" onsubmit="return confirm('Supprimer cet article ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_article_' ~ article.id) }}">
                                    <button type="submit" class="px-3 py-2 rounded-lg border border-rose-200 dark:border-rose-800 text-rose-600 hover:bg-rose-50 dark:hover:bg-rose-900/20 transition-colors">
                                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p class="text-sm text-slate-500">Aucun article pour le moment.</p>
                {% endfor %}
            </div>

            {% if total_pages is defined and total_pages > 1 %}
                <nav class="mt-8 flex items-center justify-center gap-2" aria-label="Pagination admin marketplace">
                    <a href="{{ path('app_admin_marketplace_list', app.request.query.all|merge({'tab': 'articles', 'page': current_page > 1 ? current_page - 1 : 1})) }}"
                       class="h-10 min-w-10 px-3 inline-flex items-center justify-center rounded-xl border border-slate-300 dark:border-slate-600 text-slate-700 dark:text-slate-200 {{ current_page == 1 ? 'pointer-events-none opacity-40' : 'hover:bg-slate-100 dark:hover:bg-slate-700' }}">
                        &lsaquo;
                    </a>
                    {% for p in 1..total_pages %}
                        <a href="{{ path('app_admin_marketplace_list', app.request.query.all|merge({'tab': 'articles', 'page': p})) }}"
                           class="h-10 min-w-10 px-3 inline-flex items-center justify-center rounded-xl border text-sm font-semibold {{ p == current_page ? 'border-rose-500 bg-rose-500 text-white' : 'border-slate-300 dark:border-slate-600 text-slate-700 dark:text-slate-200 hover:bg-slate-100 dark:hover:bg-slate-700' }}">
                            {{ p }}
                        </a>
                    {% endfor %}
                    <a href="{{ path('app_admin_marketplace_list', app.request.query.all|merge({'tab': 'articles', 'page': current_page < total_pages ? current_page + 1 : total_pages})) }}"
                       class="h-10 min-w-10 px-3 inline-flex items-center justify-center rounded-xl border border-slate-300 dark:border-slate-600 text-slate-700 dark:text-slate-200 {{ current_page == total_pages ? 'pointer-events-none opacity-40' : 'hover:bg-slate-100 dark:hover:bg-slate-700' }}">
                        &rsaquo;
                    </a>
                </nav>
            {% endif %}
        </div>

        {# Categories Tab #}
        <div id="content-categories" class="p-6 hidden">
            <form method="get" class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-6">
                <input type="hidden" name="tab" value="categories">
                <div class="flex-1 flex flex-col md:flex-row md:items-center md:gap-3">
                    <div class="w-full md:flex-1 relative mb-3 md:mb-0">
                        <i data-lucide="search" class="w-5 h-5 absolute left-3 top-1/2 -translate-y-1/2 text-slate-400"></i>
                        <input
                            type="text"
                            name="q_cat"
                            value="{{ app.request.query.get('q_cat') }}"
                            placeholder="Rechercher une catégorie (ID ou nom)..."
                            class="w-full pl-10 pr-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 focus:ring-2 focus:ring-rose-500"
                        >
                    </div>
                    <div class="w-full md:w-56">
                        <select name="sort_cat" class="w-full px-3 py-2.5 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 text-sm">
                            {% set currentSortCat = app.request.query.get('sort_cat', 'date_desc') %}
                            <option value="date_desc" {{ currentSortCat == 'date_desc' ? 'selected' }}>Plus récentes</option>
                            <option value="date_asc" {{ currentSortCat == 'date_asc' ? 'selected' }}>Plus anciennes</option>
                            <option value="name_asc" {{ currentSortCat == 'name_asc' ? 'selected' }}>Nom A → Z</option>
                            <option value="name_desc" {{ currentSortCat == 'name_desc' ? 'selected' }}>Nom Z → A</option>
                        </select>
                    </div>
                </div>
                <div class="flex items-center gap-3">
                    <button type="submit" class="px-4 py-2.5 rounded-xl bg-slate-800 dark:bg-slate-100 text-white dark:text-slate-900 text-sm font-semibold hover:bg-slate-900 dark:hover:bg-white transition-colors">
                        Filtrer
                    </button>
                    <a href="{{ path('app_admin_marketplace_categorie_export_pdf', app.request.query.all|merge({'tab': 'categories'})) }}" class="flex items-center gap-2 px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-600 bg-white dark:bg-slate-700 text-slate-700 dark:text-slate-100 hover:bg-slate-50 dark:hover:bg-slate-600 transition-colors">
                        <i data-lucide="file-down" class="w-4 h-4"></i>
                        Exporter PDF
                    </a>
                    <a href="{{ path('app_admin_marketplace_categorie_new') }}" class="flex items-center gap-2 px-4 py-2.5 rounded-xl bg-rose-600 hover:bg-rose-700 text-white transition-colors shadow-lg shadow-rose-500/25">
                        <i data-lucide="plus" class="w-4 h-4"></i>
                        Nouvelle catégorie
                    </a>
                </div>
            </form>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                {% for cat in categories_list %}
                    <div class="p-4 rounded-xl bg-slate-50 dark:bg-slate-700/50 border border-slate-100 dark:border-slate-700 flex flex-col gap-3">
                        <div class="flex items-start gap-3">
                            <div class="w-10 h-10 rounded-xl bg-white dark:bg-slate-800 flex items-center justify-center shadow-sm">
                                <i data-lucide="book" class="w-5 h-5 text-rose-600"></i>
                            </div>
                            <div class="flex-1">
                                <h4 class="font-semibold text-slate-900 dark:text-white">
                                    {{ cat.nomCategorie }}
                                </h4>
                                <p class="text-xs text-slate-500">
                                    {{ cat.descriptionCategorie ?: 'Aucune description' }}
                                </p>
                            </div>
                        </div>
                        <div class="flex items-center justify-between text-xs text-slate-500">
                            <span>ID: {{ cat.id }}</span>
                            <span>{{ cat.articles|length }} article(s)</span>
                        </div>
                        <div class="flex gap-2 pt-1">
                            <a href="{{ path('app_admin_marketplace_categorie_edit', {id: cat.id}) }}" class="flex-1 py-2 rounded-lg border border-slate-200 dark:border-slate-600 text-center text-sm font-medium hover:bg-slate-100 dark:hover:bg-slate-600 transition-colors">
                                Modifier
                            </a>
                            <form method="post" action="{{ path('app_admin_marketplace_categorie_delete', {id: cat.id}) }}" onsubmit="return confirm('Supprimer cette catégorie ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_categorie_' ~ cat.id) }}">
                                <button type="submit" class="px-3 py-2 rounded-lg border border-rose-200 dark:border-rose-800 text-rose-600 hover:bg-rose-50 dark:hover:bg-rose-900/20 transition-colors">
                                    <i data-lucide="trash-2" class="w-4 h-4"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                {% else %}
                    <p class="text-sm text-slate-500">Aucune catégorie pour le moment.</p>
                {% endfor %}
            </div>
            {% if total_pages_cat is defined and total_pages_cat > 1 %}
                <nav class="mt-8 flex items-center justify-center gap-2" aria-label="Pagination categories admin">
                    <a href="{{ path('app_admin_marketplace_list', app.request.query.all|merge({'tab': 'categories', 'page_cat': current_page_cat > 1 ? current_page_cat - 1 : 1})) }}"
                       class="h-10 min-w-10 px-3 inline-flex items-center justify-center rounded-xl border border-slate-300 dark:border-slate-600 text-slate-700 dark:text-slate-200 {{ current_page_cat == 1 ? 'pointer-events-none opacity-40' : 'hover:bg-slate-100 dark:hover:bg-slate-700' }}">
                        &lsaquo;
                    </a>
                    {% for p in 1..total_pages_cat %}
                        <a href="{{ path('app_admin_marketplace_list', app.request.query.all|merge({'tab': 'categories', 'page_cat': p})) }}"
                           class="h-10 min-w-10 px-3 inline-flex items-center justify-center rounded-xl border text-sm font-semibold {{ p == current_page_cat ? 'border-rose-500 bg-rose-500 text-white' : 'border-slate-300 dark:border-slate-600 text-slate-700 dark:text-slate-200 hover:bg-slate-100 dark:hover:bg-slate-700' }}">
                            {{ p }}
                        </a>
                    {% endfor %}
                    <a href="{{ path('app_admin_marketplace_list', app.request.query.all|merge({'tab': 'categories', 'page_cat': current_page_cat < total_pages_cat ? current_page_cat + 1 : total_pages_cat})) }}"
                       class="h-10 min-w-10 px-3 inline-flex items-center justify-center rounded-xl border border-slate-300 dark:border-slate-600 text-slate-700 dark:text-slate-200 {{ current_page_cat == total_pages_cat ? 'pointer-events-none opacity-40' : 'hover:bg-slate-100 dark:hover:bg-slate-700' }}">
                        &rsaquo;
                    </a>
                </nav>
            {% endif %}
        </div>
    </div>
</div>

{% block javascripts %}
<div id="ai-analyze-modal" class="fixed inset-0 z-[70] hidden items-center justify-center bg-black/60 p-4">
    <div class="w-full max-w-xl bg-white dark:bg-slate-800 rounded-2xl border border-slate-200 dark:border-slate-700 p-6 shadow-2xl">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold text-slate-900 dark:text-white">Analyser avec IA</h2>
            <button type="button" data-ai-analyze-close class="w-9 h-9 rounded-lg border border-slate-200 dark:border-slate-700">X</button>
        </div>

        <form id="ai-analyze-form" class="space-y-4">
            <input type="hidden" name="_token" value="{{ csrf_token('marketplace_ai_analyze') }}">
            <div>
                <label for="ai-product-name" class="block text-sm mb-2 text-slate-700 dark:text-slate-200">Nom du produit</label>
                <input id="ai-product-name" name="product_name" required class="h-11 w-full px-3 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 focus:ring-2 focus:ring-rose-500" />
            </div>
            <div>
                <label for="ai-product-url" class="block text-sm mb-2 text-slate-700 dark:text-slate-200">Lien du produit</label>
                <input id="ai-product-url" name="product_url" type="url" required placeholder="https://..." class="h-11 w-full px-3 rounded-xl border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900 focus:ring-2 focus:ring-rose-500" />
            </div>
            <div class="flex items-center gap-3">
                <button type="submit" id="ai-analyze-submit" class="px-4 py-2.5 rounded-xl bg-rose-600 hover:bg-rose-700 text-white text-sm font-semibold">Analyser</button>
                <button type="button" data-ai-analyze-close class="px-4 py-2.5 rounded-xl border border-slate-200 dark:border-slate-700 text-sm">Fermer</button>
            </div>
        </form>

        <div id="ai-analyze-error" class="hidden mt-4 p-3 rounded-xl bg-red-500/20 text-red-500 text-sm"></div>
        <div id="ai-analyze-result" class="hidden mt-5 space-y-3">
            <div class="p-3 rounded-xl bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700"><strong>Prix recommande:</strong> <span id="ai-price"></span></div>
            <div class="p-3 rounded-xl bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700"><strong>Qualite des avis:</strong> <span id="ai-reviews"></span></div>
            <div class="p-3 rounded-xl bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700"><strong>Note de demande:</strong> <span id="ai-demand"></span>/10</div>
            <div class="p-3 rounded-xl bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700"><strong>Justification:</strong> <span id="ai-why"></span></div>
        </div>

    });
});
</script>

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
<script>
(function() {
    const tendanceCounts = {{ tendanceCounts|json_encode|raw }};
    const skillsForChart = {{ chartSkillsData|json_encode|raw }};

    // Donut : répartition par tendance
    const ctxTendances = document.getElementById('chart-tendances');
    if (ctxTendances && (tendanceCounts.en_hausse + tendanceCounts.stable + tendanceCounts.en_baisse + tendanceCounts.sans_tendance > 0)) {
        new Chart(ctxTendances, {
            type: 'doughnut',
            data: {
                labels: ['En hausse', 'Stable', 'En baisse', 'Sans donnée'],
                datasets: [{
                    data: [tendanceCounts.en_hausse, tendanceCounts.stable, tendanceCounts.en_baisse, tendanceCounts.sans_tendance],
                    backgroundColor: ['#10b981', '#94a3b8', '#f43f5e', '#cbd5e1'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: { legend: { display: false } }
            }
        });
    } else {
        ctxTendances.parentElement.innerHTML = '<p class="text-sm text-slate-500">Rafraîchir les stats marché pour afficher les tendances.</p>';
    }

    // Courbe (line) / Barres : nombre d'offres par compétence
    const ctxOffres = document.getElementById('chart-offres');
    if (ctxOffres && skillsForChart.length > 0) {
        const labels = skillsForChart.map(s => s.nom.length > 12 ? s.nom.substring(0, 11) + '…' : s.nom);
        const data = skillsForChart.map(s => s.offres);
        const colors = skillsForChart.map(s => {
            if (s.tendance === 'en_hausse') return 'rgba(16, 185, 129, 0.8)';
            if (s.tendance === 'en_baisse') return 'rgba(244, 63, 94, 0.8)';
            return 'rgba(148, 163, 184, 0.8)';
        });
        new Chart(ctxOffres, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: "Nombre d'offres",
                    data: data,
                    backgroundColor: colors,
                    borderColor: colors.map(c => c.replace('0.8', '1')),
                    borderWidth: 1,
                    fill: false
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                indexAxis: 'y',
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        callbacks: {
                            afterLabel: function(ctx) {
                                const i = ctx.dataIndex;
                                const t = skillsForChart[i] && skillsForChart[i].tendance;
                                if (!t) return '';
                                if (t === 'en_hausse') return 'Tendance: En hausse';
                                if (t === 'en_baisse') return 'Tendance: En baisse';
                                return 'Tendance: Stable';
                            }
                        }
                    }
                },
                scales: {
                    x: { beginAtZero: true, title: { display: true, text: "Nombre d'offres" } },
                    y: { ticks: { maxRotation: 0, autoSkip: true, maxTicksLimit: 15 } }
                }
            }
        });
    } else {
        ctxOffres.parentElement.innerHTML = '<p class="text-sm text-slate-500 flex items-center justify-center h-full">Aucune donnée. Rafraîchir les stats marché pour les compétences.</p>';
    }
})();
</script>
{% endblock %}

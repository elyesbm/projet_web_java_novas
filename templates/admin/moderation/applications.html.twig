{% extends 'admin/base_admin.html.twig' %}

{% block title %}Moderation Candidatures - NOVAS Admin{% endblock %}
{% block page_title %}Moderation Candidatures{% endblock %}
{% block page_subtitle %}Candidatures en attente de validation{% endblock %}

{% block body %}
<div class="space-y-6">
    <div class="flex items-center justify-between">
        <p class="text-sm text-slate-500">{{ candidatures|length }} candidature(s) en attente</p>
        <a href="{{ path('app_admin_moderation_jobs') }}" class="px-4 py-2 rounded-xl bg-indigo-600 hover:bg-indigo-700 text-white text-sm">
            Voir les offres a moderer
        </a>
    </div>

    <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-soft border border-slate-100 dark:border-slate-700 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-sm">
                <thead class="bg-slate-50 dark:bg-slate-900/40">
                    <tr class="text-left text-slate-600 dark:text-slate-300">
                        <th class="px-4 py-3">Offre</th>
                        <th class="px-4 py-3">Candidat</th>
                        <th class="px-4 py-3">Message</th>
                        <th class="px-4 py-3">Date</th>
                        <th class="px-4 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for candidature in candidatures %}
                        <tr class="border-t border-slate-100 dark:border-slate-700 align-top">
                            <td class="px-4 py-3">
                                <p class="font-medium text-slate-900 dark:text-white">{{ candidature.offre ? candidature.offre.titreOffre : '-' }}</p>
                                <p class="text-xs text-slate-500 mt-1">{{ candidature.offre ? candidature.offre.categorieOffre : '-' }}</p>
                            </td>
                            <td class="px-4 py-3">{{ candidature.candidat ? candidature.candidat.email : '-' }}</td>
                            <td class="px-4 py-3 max-w-md">
                                <p class="line-clamp-3">{{ candidature.messageCandidature ?: '-' }}</p>
                            </td>
                            <td class="px-4 py-3">{{ candidature.dateCandidature ? candidature.dateCandidature|date('d/m/Y H:i') : '-' }}</td>
                            <td class="px-4 py-3">
                                <div class="flex justify-end gap-2">
                                    <form method="post" action="{{ path('app_admin_moderation_applications_approve', {'id': candidature.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('moderate_application_approve_' ~ candidature.id) }}">
                                        <button type="submit" class="px-3 py-1.5 rounded-lg bg-emerald-600 hover:bg-emerald-700 text-white">
                                            Approuver
                                        </button>
                                    </form>
                                    <form method="post" action="{{ path('app_admin_moderation_applications_reject', {'id': candidature.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('moderate_application_reject_' ~ candidature.id) }}">
                                        <button type="submit" class="px-3 py-1.5 rounded-lg bg-rose-600 hover:bg-rose-700 text-white">
                                            Rejeter
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="px-4 py-6 text-center text-slate-500">Aucune candidature en attente.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

